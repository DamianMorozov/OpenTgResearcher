@page "/versions"
@using TgStorage.Domain.Versions
@inherits TgDownloaderBlazor.Common.TgPageComponentEnumerable<TgStorage.Domain.Versions.TgEfVersionEntity>

<PageTitle>@TgLocale.MenuMainVersions</PageTitle>

<h1>@TgLocale.MenuMainVersions</h1>

@if (IsBlazorLoading)
{
    <p><em>Loading...</em></p>
}
else
{
	<RadzenLabel Text="@ItemsSummaryString"></RadzenLabel>
	<RadzenDataGrid Data="@Items" TItem="TgEfVersionEntity">
		<Columns>
			<RadzenDataGridColumn TItem="TgEfVersionEntity" Property="Version" Title=@TgLocale.FieldVersion  />
			<RadzenDataGridColumn TItem="TgEfVersionEntity" Property="Description" Title=@TgLocale.FieldDescription />
		</Columns>
	</RadzenDataGrid>
}