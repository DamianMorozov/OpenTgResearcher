		<!--  2 row - TG session  -->
		<Border
			Grid.Row="2"
			Margin="2"
			BorderBrush="DimGray"
			BorderThickness="1"
			CornerRadius="5"
			UseLayoutRounding="True">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="2*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
				</Grid.ColumnDefinitions>
				<!--  TG session  -->
				<StackPanel
					Grid.Column="0"
					Margin="2"
					HorizontalAlignment="Center">
					<CheckBox
						x:Uid="ClientTgSession"
						Margin="15,0,0,0"
						IsChecked="{x:Bind ViewModel.IsExistsTgSession, Mode=OneWay}"
						IsEnabled="False" />
				</StackPanel>
				<!--  Load  -->
				<Button
					Grid.Column="1"
					Margin="2"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Command="{x:Bind Path=ViewModel.AppLoadCommand, Mode=OneWay}"
					IsEnabled="False">
					<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
						<FontIcon Margin="0,0,10,0" Glyph="&#xE896;" />
						<TextBlock
							x:Uid="ActionLoad"
							HorizontalAlignment="Center"
							VerticalAlignment="Center" />
					</StackPanel>
				</Button>
				<!--  Save  -->
				<Button
					Grid.Column="2"
					Margin="2"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Command="{x:Bind Path=ViewModel.AppSaveCommand, Mode=OneWay}"
					IsEnabled="False">
					<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
						<FontIcon Margin="0,0,10,0" Glyph="&#xE74E;" />
						<TextBlock
							x:Uid="ActionSave"
							HorizontalAlignment="Center"
							VerticalAlignment="Center" />
					</StackPanel>
				</Button>
				<!--  Clear  -->
