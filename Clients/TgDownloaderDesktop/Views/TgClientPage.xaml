					Command="{x:Bind Path=ViewModel.AppClearCommand, Mode=OneWay}"
					IsEnabled="False">
					<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
						<FontIcon Margin="0,0,10,0" Glyph="&#xE894;" />
						<TextBlock
							x:Uid="ActionClear"
							HorizontalAlignment="Center"
