	xmlns:utils="using:TgDownloaderDesktop.Utils"
	xmlns:xaml="using:Microsoft.UI.Xaml"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<!--  0 row - Actions  -->
		<Border
			Grid.Row="0"
			Margin="2"
			BorderBrush="DimGray"
			BorderThickness="1"
			CornerRadius="5"
			UseLayoutRounding="True">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
				</Grid.ColumnDefinitions>
				<!--  Button Connect  -->
				<Button
					x:Uid="ClientConnect"
					Grid.Column="0"
					Margin="2"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Center"
					Command="{x:Bind ViewModel.ClientConnectCommand, Mode=OneWay}"
					IsEnabled="{x:Bind ViewModel.IsNotReady, Mode=OneWay}">
					<FontIcon Glyph="&#xE703;" />
				</Button>
				<!--  Button Disconnect  -->
				<Button
					x:Uid="ClientDisconnect"
					Grid.Column="1"
					Margin="2"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Center"
					Command="{x:Bind ViewModel.ClientDisconnectCommand, Mode=OneWay}"
					IsEnabled="{x:Bind ViewModel.IsReady, Mode=OneWay}">
					<FontIcon Glyph="&#xE8BB;" />
				</Button>
				<!--  Link  -->
				<Border Grid.Column="2" Margin="12,-1,2,2">
					<HyperlinkButton
						x:Uid="ClientPage_MyTelegram"
						Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
						HorizontalAlignment="Stretch" />
				</Border>
			</Grid>
		</Border>
		<!--  1 row - Client settings  -->
		<Border
			Grid.Row="1"
			Margin="2"
			VerticalAlignment="Top"
			BorderBrush="DimGray"
			BorderThickness="1"
			CornerRadius="5"
			UseLayoutRounding="True">
			<Grid Margin="2" Background="Transparent">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="2*" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="5*" />
				</Grid.ColumnDefinitions>
				<!--  Headers  -->
				<TextBlock
					x:Uid="SettingName"
					Grid.Row="0"
					Grid.Column="0"
					Margin="2"
					FontWeight="Bold"
					HorizontalTextAlignment="Center"
					TextAlignment="Center" />
				<TextBlock
					x:Uid="SettingValue"
					Grid.Row="0"
					Grid.Column="2"
					Margin="2"
					FontWeight="Bold"
					HorizontalTextAlignment="Center"
					TextAlignment="Center" />
				<!--  Row 1 - Horizontal separator  -->
				<Rectangle
					Grid.Row="1"
					Grid.Column="0"
					Grid.ColumnSpan="3"
					Height="1"
					Fill="DimGray" />
				<!--  Vertical separator  -->
				<Rectangle
					Grid.Row="0"
					Grid.RowSpan="13"
					Grid.Column="1"
					Width="1"
					Fill="DimGray" />
				<!--  API hash  -->
				<TextBlock
					x:Uid="ClientApiHash"
					Grid.Row="2"
					Grid.Column="0"
					Margin="2"
					FontWeight="Bold"
					HorizontalTextAlignment="Center"
					TextAlignment="Center" />
				<TextBox
					Grid.Row="2"
					Grid.Column="2"
					Margin="2"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Center"
					HorizontalContentAlignment="Left"
					Text="{x:Bind ViewModel.AppVm.App.ApiHash, Mode=TwoWay}" />
				<!--  API ID  -->
				<TextBlock
					x:Uid="ClientApiId"
					Grid.Row="3"
					Grid.Column="0"
					Margin="2"
					FontWeight="Bold"
					HorizontalTextAlignment="Center"
					TextAlignment="Center" />
				<TextBox
					Grid.Row="3"
					Grid.Column="2"
					Margin="2"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Center"
					HorizontalContentAlignment="Left"
					Text="{x:Bind ViewModel.AppVm.App.ApiId, Mode=TwoWay}" />
				<!--  Phone number  -->
				<TextBlock
					x:Uid="ClientPhoneNumber"
					Grid.Row="4"
					Grid.Column="0"
					Margin="2"
					FontWeight="Bold"
					HorizontalTextAlignment="Center"
					TextAlignment="Center" />
