<Page
	x:Class="TgDownloaderDesktop.Views.TgSettingsPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:helpers="using:TgDownloaderDesktop.Helpers"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewmodels="using:TgDownloaderDesktop.ViewModels"
	d:DataContext="{d:DesignInstance Type=viewmodels:TgSettingsViewModel}"
	mc:Ignorable="d">
	<ScrollView VerticalScrollMode="Auto">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto" />
				<RowDefinition Height="auto" />
				<RowDefinition Height="auto" />
			</Grid.RowDefinitions>
			<!--  Actions  -->
			<Expander
				x:Uid="SettingAppActions"
				Grid.Row="0"
				Margin="{StaticResource ExpanderMargin}"
				HorizontalAlignment="Stretch"
				HorizontalContentAlignment="Stretch"
				IsExpanded="True">
				<Grid Margin="0,-10,0,-10">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<!--  Default button  -->
					<Button
						Margin="0,0,5,0"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Command="{x:Bind Path=ViewModel.SettingsDefaultCommand, Mode=OneWay}">
						<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
							<FontIcon Margin="10,0,20,0" Glyph="&#xE72C;" />
							<TextBlock
								x:Uid="ActionResetToDefault"
								HorizontalAlignment="Center"
								VerticalAlignment="Center" />
						</StackPanel>
					</Button>
					<!--  Save button  -->
					<Button
						Grid.Column="1"
						Margin="5,0,0,0"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Command="{x:Bind Path=ViewModel.SettingsSaveCommand, Mode=OneWay}">
						<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
							<FontIcon Margin="10,0,20,0" Glyph="&#xE72C;" />
							<TextBlock
								x:Uid="ActionSave"
								HorizontalAlignment="Center"
								VerticalAlignment="Center" />
						</StackPanel>
					</Button>
				</Grid>
			</Expander>
			<!--  App  -->
			<Expander
				x:Uid="ExpanderSettingApp"
				Grid.Row="1"
				Margin="{StaticResource ExpanderMargin}"
				HorizontalAlignment="Stretch"
				HorizontalContentAlignment="Stretch"
				IsExpanded="True">
				<Grid Margin="0,-10,0,-10">
					<Grid.RowDefinitions>
						<RowDefinition Height="auto" />
						<RowDefinition Height="auto" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<!--  Language  -->
					<TextBlock
						x:Uid="SettingAppLanguage"
						Grid.Column="0"
						Margin="10,5,10,5"
						TextAlignment="Left"
						ToolTipService.ToolTip="{x:Bind helpers:TgResourceExtensions.GetSettingAppLanguageTooltip}" />
					<StackPanel
						Grid.Column="1"
						Width="20"
						Margin="2"
						HorizontalAlignment="Center" />
					<ComboBox
						x:Name="ComboBoxAppLanguages"
						Grid.Column="2"
						Margin="2"
						HorizontalAlignment="Stretch"
						ItemsSource="{x:Bind ViewModel.SettingsService.AppLanguages, Mode=OneWay}"
						SelectedItem="{x:Bind ViewModel.SettingsService.AppLanguage, Mode=TwoWay}" />
					<!--  Theme  -->
					<TextBlock
						x:Uid="SettingAppTheme"
						Grid.Row="1"
						Grid.Column="0"
						Margin="10,5,10,5"
						TextAlignment="Left"
						ToolTipService.ToolTip="{x:Bind helpers:TgResourceExtensions.GetSettingAppThemeTooltip}" />
					<StackPanel
						Grid.Column="1"
						Width="20"
						Margin="2"
						HorizontalAlignment="Center" />
					<ComboBox
						x:Name="ComboBoxAppThemes"
						Grid.Row="1"
						Grid.Column="2"
						Margin="2"
						HorizontalAlignment="Stretch"
						ItemsSource="{x:Bind ViewModel.SettingsService.AppThemes, Mode=OneWay}"
						SelectedItem="{x:Bind ViewModel.SettingsService.AppTheme, Mode=TwoWay}" />
				</Grid>
			</Expander>
			<!--  Files  -->
			<Expander
				x:Uid="SettingAppFiles"
				Grid.Row="2"
				Margin="{StaticResource ExpanderMargin}"
				HorizontalAlignment="Stretch"
				HorizontalContentAlignment="Stretch"
				IsExpanded="True">
				<Grid Margin="0,-10,0,-10">
					<Grid.RowDefinitions>
						<RowDefinition Height="auto" />
						<RowDefinition Height="auto" />
						<RowDefinition Height="auto" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="auto" />
						<ColumnDefinition Width="auto" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<!--  Folder  -->
					<TextBlock
						x:Uid="SettingFolder"
						Margin="10,5,10,5"
						TextAlignment="Left" />
					<TextBox
						Grid.Column="2"
						Margin="2"
						HorizontalAlignment="Stretch"
						IsReadOnly="True"
						Text="{x:Bind ViewModel.SettingsService.AppFolder, Mode=OneWay}" />
					<!--  Session  -->
					<TextBlock
						x:Uid="SettingSession"
						Grid.Row="1"
						Margin="10,5,10,5"
						TextAlignment="Left" />
					<StackPanel
						Grid.Row="1"
						Grid.Column="1"
						Width="40"
						Margin="2"
						HorizontalAlignment="Center">
						<CheckBox
							Margin="5,0,0,0"
							IsChecked="{x:Bind ViewModel.SettingsService.IsExistsAppSession, Mode=OneWay}"
							IsEnabled="False" />
					</StackPanel>
					<TextBox
						Grid.Row="1"
						Grid.Column="2"
						Margin="2"
						HorizontalAlignment="Stretch"
						Text="{x:Bind ViewModel.SettingsService.AppSession, Mode=TwoWay}" />
					<!--  Storage  -->
					<TextBlock
						x:Uid="SettingStorage"
						Grid.Row="2"
						Margin="10,5,10,5"
						TextAlignment="Left" />
					<StackPanel
						Grid.Row="2"
						Grid.Column="1"
						Width="40"
						Margin="2"
						HorizontalAlignment="Center">
						<CheckBox
							Margin="5,0,0,0"
							IsChecked="{x:Bind ViewModel.SettingsService.IsExistsAppStorage, Mode=OneWay}"
							IsEnabled="False" />
					</StackPanel>
					<TextBox
						Grid.Row="2"
						Grid.Column="2"
						Margin="2"
						HorizontalAlignment="Stretch"
						Text="{x:Bind ViewModel.SettingsService.AppStorage, Mode=TwoWay}" />
				</Grid>
			</Expander>
		</Grid>
	</ScrollView>
</Page>
