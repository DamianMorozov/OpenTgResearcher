		<!--  Settings  -->
		<Border
			Grid.Row="1"
			Margin="2,15,2,0"
			BorderBrush="DimGray"
			BorderThickness="1"
			CornerRadius="5"
			UseLayoutRounding="True">
			<Grid Margin="2">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="2*" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="0.5*" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="5*" />
				</Grid.ColumnDefinitions>
				<!--  Headers  -->
				<TextBlock
					x:Uid="SettingName"
					Grid.Row="0"
					Grid.Column="0"
					Margin="2"
					FontWeight="Bold"
					HorizontalTextAlignment="Center"
					TextAlignment="Center" />
				<TextBlock
					x:Uid="SettingCheck"
					Grid.Row="0"
					Grid.Column="2"
					Margin="2"
					FontWeight="Bold"
					HorizontalTextAlignment="Center"
					TextAlignment="Center" />
				<TextBlock
					x:Uid="SettingValue"
					Grid.Row="0"
					Grid.Column="4"
					Margin="2"
					FontWeight="Bold"
					HorizontalTextAlignment="Center"
					TextAlignment="Center" />
				<!--  Horizontal separator  -->
				<Rectangle
					Grid.Row="1"
					Grid.Column="0"
					Grid.ColumnSpan="5"
					Height="1"
					Fill="DimGray" />
				<!--  Vertical separator  -->
				<Rectangle
					Grid.Row="0"
					Grid.RowSpan="5"
					Grid.Column="1"
					Width="1"
					Fill="DimGray" />
				<!--  Vertical separator  -->
				<Rectangle
					Grid.Row="0"
					Grid.RowSpan="5"
					Grid.Column="3"
					Width="1"
					Fill="DimGray" />
				<!--  EF storage  -->
				<TextBox
					x:Uid="SettingEfStorage"
					Grid.Row="2"
					Grid.Column="0"
					Margin="5,0,0,0"
					Background="Transparent"
					BorderBrush="Transparent"
					HorizontalTextAlignment="Left"
					IsReadOnly="True"
					TextAlignment="Left" />
				<CheckBox
					Grid.Row="2"
					Grid.Column="2"
					Margin="15,0,15,0"
					IsChecked="{x:Bind ViewModel.IsExistsEfStorage, Mode=OneWay}"
					IsEnabled="False" />
				<TextBox
					Grid.Row="2"
					Grid.Column="4"
					Margin="2"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Center"
					HorizontalContentAlignment="Left"
					Text="{x:Bind ViewModel.XmlEfStorage, Mode=TwoWay}" />
				<!--  File session  -->
				<TextBox
					x:Uid="SettingTgSession"
					Grid.Row="3"
					Grid.Column="0"
					Margin="5,0,0,0"
					Background="Transparent"
					BorderBrush="Transparent"
					HorizontalTextAlignment="Left"
					IsReadOnly="True"
					TextAlignment="Left" />
				<CheckBox
					Grid.Row="3"
					Grid.Column="2"
					Margin="15,0,15,0"
					IsChecked="{x:Bind ViewModel.IsExistsFileSession, Mode=OneWay}"
					IsEnabled="False" />
				<TextBox
					Grid.Row="3"
					Grid.Column="4"
					Margin="2"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Center"
					HorizontalContentAlignment="Left"
					Text="{x:Bind ViewModel.XmlFileSession, Mode=TwoWay}" />
				<!--  App theme  -->
				<TextBox
					x:Uid="SettingAppTheme"
					Grid.Row="4"
					Grid.Column="0"
					Margin="5,0,0,0"
					Background="Transparent"
					BorderBrush="Transparent"
					HorizontalTextAlignment="Left"
					IsReadOnly="True"
					TextAlignment="Left" />
				<ComboBox
					x:Name="ComboBoxAppThemes"
					Grid.Row="4"
					Grid.Column="4"
					HorizontalAlignment="Stretch"
					ItemsSource="{x:Bind ViewModel.AppThemes, Mode=OneWay}"
					PlaceholderText="App theme"
					SelectedItem="{x:Bind ViewModel.CurrentTheme, Mode=TwoWay}" />
			</Grid>
		</Border>
		<!--  Buttons  -->
		<Border
			Grid.Row="2"
			Margin="2,15,2,0"
			BorderBrush="DimGray"
			BorderThickness="1"
			CornerRadius="5"
			UseLayoutRounding="True">
			<Grid VerticalAlignment="Top">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
				</Grid.ColumnDefinitions>
				<!--  Default button  -->
				<Button
					x:Uid="HomeResetToDefault"
					Grid.Column="0"
					Margin="2"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Command="{x:Bind Path=ViewModel.SettingsDefaultCommand, Mode=OneWay}">
					<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
						<FontIcon Margin="10,0,10,0" Glyph="&#xE72C;" />
						<TextBlock
							Margin="5,0,0,0"
							VerticalAlignment="Center"
							Text="Reset to Default" />
					</StackPanel>
				</Button>
				<!--  Save button  -->
				<Button
					x:Uid="HomeSaveToXml"
					Grid.Column="1"
					Margin="2"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Command="{x:Bind Path=ViewModel.SettingsSaveCommand, Mode=OneWay}">
					<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
						<FontIcon Margin="10,0,10,0" Glyph="&#xE74E;" />
						<TextBlock
							Margin="5,0,0,0"
							VerticalAlignment="Center"
							Text="Save to XML" />
					</StackPanel>
				</Button>
			</Grid>
		</Border>
	</Grid>
</Page>
