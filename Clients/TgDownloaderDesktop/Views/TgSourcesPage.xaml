												Margin="5,5,5,5"
												HorizontalAlignment="Stretch"
												VerticalAlignment="Stretch"
												IsIndeterminate="{Binding IsLoad, Mode=OneWay}"
												Maximum="100"
												Minimum="0"
												Visibility="Visible"
