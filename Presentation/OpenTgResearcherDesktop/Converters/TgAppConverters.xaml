<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:OpenTgResearcherDesktop.Converters"
    xmlns:convertersWinUI="using:CommunityToolkit.WinUI.Converters">

    <converters:TgDateTimeToDateTimeOffsetConverter x:Key="DateTimeToDateTimeOffsetConverter" />
    <converters:TgEnumToColumnConverter x:Key="EnumToColumnConverter" />
    <converters:TgEnumToColumnSpanConverter x:Key="EnumToColumnSpanConverter" />
    <converters:TgInverseBooleanConverter x:Key="InverseBooleanConverter" />
    <converters:TgSafeImagePathConverter x:Key="SafeImagePathConverter" />

    <convertersWinUI:BoolNegationConverter x:Key="BoolNegationConverter" />
    <convertersWinUI:BoolToObjectConverter
        x:Key="BoolToObjectConverter"
        FalseValue="{ThemeResource SystemFillColorNeutralBackgroundBrush}"
        TrueValue="{ThemeResource AccentTextFillColorDisabledBrush}" />
    <convertersWinUI:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    <convertersWinUI:BoolToVisibilityConverter
        x:Key="InverseBoolToVisibilityConverter"
        FalseValue="Visible"
        TrueValue="Collapsed" />
    <convertersWinUI:VisibilityToBoolConverter x:Key="VisibilityToBoolConverter" />
    <convertersWinUI:StringFormatConverter x:Key="StringFormatConverter" />

    <!--  Style for clipboard button with checkmark animation  -->
    <Style x:Key="ClipboardAnimatedButtonStyleSimple" TargetType="converters:TgAnimatedClipboardButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="converters:TgAnimatedClipboardButton">
                    <Grid x:Name="RootGrid">
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="IconScale" ScaleX="1" ScaleY="1" />
                        </Grid.RenderTransform>
                        <SymbolIcon x:Name="ClipboardIcon" Symbol="{TemplateBinding NormalSymbol}" />
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="IconStates">
                                <!--  Normal  -->
                                <VisualState x:Name="NormalState">
                                    <VisualState.Setters>
                                        <Setter Target="ClipboardIcon.Symbol" Value="{Binding NormalSymbol, RelativeSource={RelativeSource TemplatedParent}}" />
                                        <Setter Target="IconScale.ScaleX" Value="1" />
                                        <Setter Target="IconScale.ScaleY" Value="1" />
                                    </VisualState.Setters>
                                </VisualState>
                                <!--  Checked  -->
                                <VisualState x:Name="CheckedState">
                                    <VisualState.Setters>
                                        <Setter Target="ClipboardIcon.Symbol" Value="{Binding CheckedSymbol, RelativeSource={RelativeSource TemplatedParent}}" />
                                    </VisualState.Setters>
                                    <VisualState.Storyboard>
                                        <Storyboard>
                                            <!--  Scale up and down  -->
                                            <DoubleAnimation
                                                AutoReverse="True"
                                                Storyboard.TargetName="IconScale"
                                                Storyboard.TargetProperty="ScaleX"
                                                From="1"
                                                To="1.3"
                                                Duration="0:0:0.15" />
                                            <DoubleAnimation
                                                AutoReverse="True"
                                                Storyboard.TargetName="IconScale"
                                                Storyboard.TargetProperty="ScaleY"
                                                From="1"
                                                To="1.3"
                                                Duration="0:0:0.15" />
                                        </Storyboard>
                                    </VisualState.Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Style for clipboard button with checkmark and flash animation  -->
    <Style x:Key="ClipboardAnimatedButtonStyle" TargetType="converters:TgAnimatedClipboardButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="converters:TgAnimatedClipboardButton">
                    <Grid x:Name="RootGrid">
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="IconScale" ScaleX="1" ScaleY="1" />
                        </Grid.RenderTransform>
                        <!--  Icon  -->
                        <SymbolIcon
                            x:Name="ClipboardIcon"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Symbol="{TemplateBinding NormalSymbol}" />
                        <!--  Soft color flash layer  -->
                        <Ellipse
                            x:Name="FlashOverlay"
                            Width="40"
                            Height="40"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsHitTestVisible="False"
                            Opacity="0">
                            <Ellipse.Fill>
                                <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                    <!--  Center — bright accent color  -->
                                    <GradientStop Offset="0" Color="{ThemeResource SystemAccentColor}" />
                                    <!--  Edges — transparent  -->
                                    <GradientStop Offset="1" Color="Transparent" />
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="IconStates">
                                <!--  Normal  -->
                                <VisualState x:Name="NormalState">
                                    <VisualState.Setters>
                                        <Setter Target="ClipboardIcon.Symbol" Value="{Binding NormalSymbol, RelativeSource={RelativeSource TemplatedParent}}" />
                                        <Setter Target="IconScale.ScaleX" Value="1" />
                                        <Setter Target="IconScale.ScaleY" Value="1" />
                                        <Setter Target="FlashOverlay.Opacity" Value="0" />
                                    </VisualState.Setters>
                                </VisualState>
                                <!--  Checked  -->
                                <VisualState x:Name="CheckedState">
                                    <VisualState.Setters>
                                        <Setter Target="ClipboardIcon.Symbol" Value="{Binding CheckedSymbol, RelativeSource={RelativeSource TemplatedParent}}" />
                                    </VisualState.Setters>
                                    <VisualState.Storyboard>
                                        <Storyboard>
                                            <!--  Scale  -->
                                            <DoubleAnimation
                                                AutoReverse="True"
                                                Storyboard.TargetName="IconScale"
                                                Storyboard.TargetProperty="ScaleX"
                                                From="1"
                                                To="1.3"
                                                Duration="0:0:0.15" />
                                            <DoubleAnimation
                                                AutoReverse="True"
                                                Storyboard.TargetName="IconScale"
                                                Storyboard.TargetProperty="ScaleY"
                                                From="1"
                                                To="1.3"
                                                Duration="0:0:0.15" />
                                            <!--  Flash  -->
                                            <DoubleAnimation
                                                AutoReverse="True"
                                                Storyboard.TargetName="FlashOverlay"
                                                Storyboard.TargetProperty="Opacity"
                                                From="0"
                                                To="0.8"
                                                Duration="0:0:0.12" />
                                        </Storyboard>
                                    </VisualState.Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
