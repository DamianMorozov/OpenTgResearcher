<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:OpenTgResearcherDesktop.Converters"
    xmlns:convertersWinUI="using:CommunityToolkit.WinUI.Converters"
    xmlns:styles="using:OpenTgResearcherDesktop.Styles">

    <!--  Style for clipboard button with checkmark animation  -->
    <Style x:Key="ClipboardAnimatedButtonStyleSimple" TargetType="styles:TgAnimatedClipboardButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="styles:TgAnimatedClipboardButton">
                    <Grid x:Name="RootGrid">
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="IconScale" ScaleX="1" ScaleY="1" />
                        </Grid.RenderTransform>
                        <SymbolIcon x:Name="ClipboardIcon" Symbol="{TemplateBinding NormalSymbol}" />
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="IconStates">
                                <!--  Normal  -->
                                <VisualState x:Name="NormalState">
                                    <VisualState.Setters>
                                        <Setter Target="ClipboardIcon.Symbol" Value="{Binding NormalSymbol, RelativeSource={RelativeSource TemplatedParent}}" />
                                        <Setter Target="IconScale.ScaleX" Value="1" />
                                        <Setter Target="IconScale.ScaleY" Value="1" />
                                    </VisualState.Setters>
                                </VisualState>
                                <!--  Checked  -->
                                <VisualState x:Name="CheckedState">
                                    <VisualState.Setters>
                                        <Setter Target="ClipboardIcon.Symbol" Value="{Binding CheckedSymbol, RelativeSource={RelativeSource TemplatedParent}}" />
                                    </VisualState.Setters>
                                    <VisualState.Storyboard>
                                        <Storyboard>
                                            <!--  Scale up and down  -->
                                            <DoubleAnimation
                                                AutoReverse="True"
                                                Storyboard.TargetName="IconScale"
                                                Storyboard.TargetProperty="ScaleX"
                                                From="1"
                                                To="1.3"
                                                Duration="0:0:0.15" />
                                            <DoubleAnimation
                                                AutoReverse="True"
                                                Storyboard.TargetName="IconScale"
                                                Storyboard.TargetProperty="ScaleY"
                                                From="1"
                                                To="1.3"
                                                Duration="0:0:0.15" />
                                        </Storyboard>
                                    </VisualState.Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Style for clipboard button with checkmark and flash animation  -->
    <Style x:Key="ClipboardAnimatedButtonStyle" TargetType="styles:TgAnimatedClipboardButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="styles:TgAnimatedClipboardButton">
                    <Grid x:Name="RootGrid">
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="IconScale" ScaleX="1" ScaleY="1" />
                        </Grid.RenderTransform>
                        <!--  Icon  -->
                        <SymbolIcon
                            x:Name="ClipboardIcon"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Symbol="{TemplateBinding NormalSymbol}" />
                        <!--  Soft color flash layer  -->
                        <Ellipse
                            x:Name="FlashOverlay"
                            Width="40"
                            Height="40"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsHitTestVisible="False"
                            Opacity="0">
                            <Ellipse.Fill>
                                <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                    <!--  Center — bright accent color  -->
                                    <GradientStop Offset="0" Color="{ThemeResource SystemAccentColor}" />
                                    <!--  Edges — transparent  -->
                                    <GradientStop Offset="1" Color="Transparent" />
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="IconStates">
                                <!--  Normal  -->
                                <VisualState x:Name="NormalState">
                                    <VisualState.Setters>
                                        <Setter Target="ClipboardIcon.Symbol" Value="{Binding NormalSymbol, RelativeSource={RelativeSource TemplatedParent}}" />
                                        <Setter Target="IconScale.ScaleX" Value="1" />
                                        <Setter Target="IconScale.ScaleY" Value="1" />
                                        <Setter Target="FlashOverlay.Opacity" Value="0" />
                                    </VisualState.Setters>
                                </VisualState>
                                <!--  Checked  -->
                                <VisualState x:Name="CheckedState">
                                    <VisualState.Setters>
                                        <Setter Target="ClipboardIcon.Symbol" Value="{Binding CheckedSymbol, RelativeSource={RelativeSource TemplatedParent}}" />
                                    </VisualState.Setters>
                                    <VisualState.Storyboard>
                                        <Storyboard>
                                            <!--  Scale  -->
                                            <DoubleAnimation
                                                AutoReverse="True"
                                                Storyboard.TargetName="IconScale"
                                                Storyboard.TargetProperty="ScaleX"
                                                From="1"
                                                To="1.3"
                                                Duration="0:0:0.15" />
                                            <DoubleAnimation
                                                AutoReverse="True"
                                                Storyboard.TargetName="IconScale"
                                                Storyboard.TargetProperty="ScaleY"
                                                From="1"
                                                To="1.3"
                                                Duration="0:0:0.15" />
                                            <!--  Flash  -->
                                            <DoubleAnimation
                                                AutoReverse="True"
                                                Storyboard.TargetName="FlashOverlay"
                                                Storyboard.TargetProperty="Opacity"
                                                From="0"
                                                To="0.8"
                                                Duration="0:0:0.12" />
                                        </Storyboard>
                                    </VisualState.Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Style for button with license verification  -->
    <Style
        x:Key="LicenseButtonStyle"
        BasedOn="{StaticResource DefaultButtonStyle}"
        TargetType="styles:TgLicenseButton">
        <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundAccentBrush}" />
        <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}" />
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>

</ResourceDictionary>
