            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding Status, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnFileNameTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding FileName, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnFileSizeAsStringTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding FileSizeAsString, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnRecordsCountTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding RecordsCount, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnFilterTypeTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding FilterType, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnNameTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding Name, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnMaskTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding Mask, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnSizeTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding Size, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnTypeTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding Type, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnHostNameTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
