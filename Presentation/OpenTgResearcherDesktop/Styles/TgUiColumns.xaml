<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:OpenTgResearcherDesktop.Converters"
    xmlns:convertersWinUI="using:CommunityToolkit.WinUI.Converters"
    xmlns:styles="using:OpenTgResearcherDesktop.Styles">

    <DataTemplate x:Key="ColumnSensitiveTemplate">
        <TextBlock
            Margin="5,5,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="**********" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnIdTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding Id, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnDisplayNameTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding DisplayName, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnUserNameTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding UserName, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnFirstNameTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding FirstName, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnLastNameTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding LastName, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnPhoneTemplate">
