    </DataTemplate>
    <DataTemplate x:Key="ColumnPortTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding Port, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnPasswordTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding Password, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnDateTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding Date, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnExpireDateTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding ExpireDate, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnCaptionTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding Caption, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnTitleTemplate">
        <TextBlock
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding Title, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnFirstIdTemplate">
        <TextBlock
            Margin="5,0,5,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding FirstId, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnCountTemplate">
        <TextBlock
            Margin="5,0,5,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding Count, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnParticipantsTemplate">
        <TextBlock
            Margin="5,0,5,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding ParticipantsCount, Mode=OneWay}" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnMessagesCountTemplate">
        <TextBlock
            Margin="5,0,5,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding MessagesCount, Mode=OneWay}" />
    </DataTemplate>

    <DataTemplate x:Key="ColumnIsUserAccessTemplate">
        <ToggleSwitch
            Margin="0,0,-120,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsEnabled="False"
            IsOn="{Binding IsUserAccess, Mode=OneWay}"
            OffContent=""
            OnContent="" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnIsBotTemplate">
        <ToggleSwitch
            Margin="0,0,-120,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsEnabled="False"
            IsOn="{Binding IsBot, Mode=OneWay}"
            OffContent=""
            OnContent="" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnIsEnabledTemplate">
        <ToggleSwitch
            Margin="0,0,-120,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsEnabled="False"
            IsOn="{Binding IsEnabled, Mode=OneWay}"
            OffContent=""
            OnContent="" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnIsSubscribeTemplate">
        <ToggleSwitch
            Margin="0,0,-120,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsEnabled="False"
            IsOn="{Binding IsSubscribe, Mode=OneWay}"
            OffContent=""
            OnContent="" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnIsSourceActiveTemplate">
        <ToggleSwitch
            Margin="0,0,-120,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsEnabled="False"
            IsOn="{Binding IsSourceActive, Mode=OneWay}"
            OffContent=""
            OnContent="" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnIsUserActiveTemplate">
        <ToggleSwitch
            Margin="0,0,-120,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsEnabled="False"
            IsOn="{Binding IsUserActive, Mode=OneWay}"
            OffContent=""
            OnContent="" />
    </DataTemplate>
    <DataTemplate x:Key="ColumnIsAutoUpdateTemplate">
        <ToggleSwitch
            Margin="0,0,-120,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsEnabled="False"
            IsOn="{Binding IsAutoUpdate, Mode=OneWay}"
            OffContent=""
            OnContent="" />
    </DataTemplate>

    <DataTemplate x:Key="ColumnProgressTemplate">
        <ProgressBar
            Margin="5,5,5,5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            IsIndeterminate="{Binding IsLoad, Mode=OneWay}"
            Maximum="100"
            Minimum="0"
            ToolTipService.ToolTip="{Binding ProgressPercentString, Mode=OneWay}"
            Value="{Binding ProgressPercent, Mode=OneWay}" />
    </DataTemplate>

</ResourceDictionary>
