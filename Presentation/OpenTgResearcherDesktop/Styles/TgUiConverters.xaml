<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:OpenTgResearcherDesktop.Converters"
    xmlns:convertersWinUI="using:CommunityToolkit.WinUI.Converters">

    <converters:TgDateTimeToDateTimeOffsetConverter x:Key="DateTimeToDateTimeOffsetConverter" />
    <converters:TgEnumToColumnConverter x:Key="EnumToColumnConverter" />
    <converters:TgEnumToColumnSpanConverter x:Key="EnumToColumnSpanConverter" />
    <converters:TgSafeImagePathConverter x:Key="SafeImagePathConverter" />

    <convertersWinUI:BoolNegationConverter x:Key="BoolNegationConverter" />

    <SolidColorBrush
        x:Key="NeutralBackgroundTransparentBrush"
        Opacity="0.5"
        Color="{ThemeResource SystemFillColorNeutralBackground}" />
    <convertersWinUI:BoolToObjectConverter
        x:Key="BoolToObjectConverter"
        FalseValue="{ThemeResource NeutralBackgroundTransparentBrush}"
        TrueValue="{ThemeResource AccentTextFillColorDisabledBrush}" />

    <convertersWinUI:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    <convertersWinUI:BoolToVisibilityConverter
        x:Key="InverseBoolToVisibilityConverter"
        FalseValue="Visible"
        TrueValue="Collapsed" />
    <convertersWinUI:VisibilityToBoolConverter x:Key="VisibilityToBoolConverter" />
    <convertersWinUI:StringFormatConverter x:Key="StringFormatConverter" />

    <converters:TgLicenseCheckBackgroundConverter x:Key="LicenseCheckBackgroundConverter" />
    <converters:TgLicenseCheckForegroundConverter x:Key="LicenseCheckForegroundConverter" />
    <converters:TgLicenseCheckTooltipConverter x:Key="LicenseCheckTooltipConverter" />

    <converters:TgEnumSourceTypeToBooleanConverter x:Key="EnumSourceTypeToBooleanConverter" />

</ResourceDictionary>
