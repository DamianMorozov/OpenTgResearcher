<common:TgPageBase
    x:Class="OpenTgResearcherDesktop.Views.TgChatDetailsInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:OpenTgResearcherDesktop.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:OpenTgResearcherDesktop.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:messages="using:TgStorage.Domain.Messages"
    xmlns:styles="using:OpenTgResearcherDesktop.Styles"
    xmlns:users="using:TgStorage.Domain.Users"
    xmlns:viewmodels="using:OpenTgResearcherDesktop.ViewModels"
    xmlns:views="using:OpenTgResearcherDesktop.Views"
    d:DataContext="{d:DesignInstance Type=viewmodels:TgChatDetailsInfoViewModel}"
    mc:Ignorable="d">

    <!--  Chat details  -->
    <ContentControl HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <!--  Load data  -->
            <views:TgLoadDataPage Visibility="{x:Bind ViewModel.IsPageLoad, Mode=OneWay}" />
            <Grid Grid.Row="1" Visibility="{x:Bind ViewModel.IsPageLoad, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <!--  Update chat details  -->
                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{x:Bind ViewModel.UpdateChatSettingsCommand}"
                    IsEnabled="{x:Bind ViewModel.IsOnlineReady, Mode=OneWay}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <FontIcon Margin="0,0,10,0" Glyph="&#xe777;" />
                        <TextBlock
                            x:Uid="TextBlockUpdateChatDetails"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <!--  Title  -->
                <TextBlock
                    x:Uid="FieldTitle"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.Title, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.Title, Mode=OneWay}" />
                </StackPanel>
                <!--  Type  -->
                <TextBlock
                    x:Uid="FieldType"
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.Type, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.Type, Mode=OneWay}" />
                </StackPanel>
                <!--  Id  -->
                <TextBlock
                    x:Uid="FieldId"
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <!--  Sensitive data  -->
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.SensitiveData, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.ChatDetailsDto.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.Id, Mode=OneWay}"
                        TextAlignment="Left"
                        Visibility="{x:Bind ViewModel.ChatDetailsDto.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.Id, Mode=OneWay}" />
                </StackPanel>
                <!--  UserName  -->
                <TextBlock
                    x:Uid="FieldUserName"
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.UserName, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.UserName, Mode=OneWay}" />
                </StackPanel>
                <!--  InviteLink  -->
                <TextBlock
                    x:Uid="FieldInviteLink"
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="3"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.InviteLink, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.InviteLink, Mode=OneWay}" />
                </StackPanel>
                <!--  Description  -->
                <TextBlock
                    x:Uid="FieldDescription"
                    Grid.Row="3"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="3"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.Description, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.Description, Mode=OneWay}" />
                </StackPanel>
                <!--  Permissions  -->
                <TextBlock
                    x:Uid="FieldPermissions"
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="4"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.Permissions, Mode=OneWay}"
                        TextAlignment="Left"
                        TextWrapping="WrapWholeWords" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.Permissions, Mode=OneWay}" />
                </StackPanel>
                <!--  About  -->
                <TextBlock
                    x:Uid="FieldAbout"
                    Grid.Row="4"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="4"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.About, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.About, Mode=OneWay}" />
                </StackPanel>
                <!--  Participants count  -->
                <TextBlock
                    x:Uid="FieldParticipantsCount"
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="5"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.ParticipantsCount, Mode=OneWay}"
                        TextAlignment="Left"
                        TextWrapping="WrapWholeWords" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.ParticipantsCount, Mode=OneWay}" />
                </StackPanel>
                <!--  OnlineCount  -->
                <TextBlock
                    x:Uid="FieldOnlineCount"
                    Grid.Row="5"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="5"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.OnlineCount, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.OnlineCount, Mode=OneWay}" />
                </StackPanel>
                <!--  SlowMode  -->
                <TextBlock
                    x:Uid="FieldSlowMode"
                    Grid.Row="6"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="6"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.SlowMode, Mode=OneWay}"
                        TextAlignment="Left"
                        TextWrapping="WrapWholeWords" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.SlowMode, Mode=OneWay}" />
                </StackPanel>
                <!--  Available reactions  -->
                <TextBlock
                    x:Uid="FieldAvailableReactions"
                    Grid.Row="6"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="6"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.AvailableReactions, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.AvailableReactions, Mode=OneWay}" />
                </StackPanel>
                <!--  TtlPeriod  -->
                <TextBlock
                    x:Uid="FieldTtlPeriod"
                    Grid.Row="7"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="7"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.TtlPeriod, Mode=OneWay}"
                        TextAlignment="Left"
                        TextWrapping="WrapWholeWords" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.TtlPeriod, Mode=OneWay}" />
                </StackPanel>
                <!--  IsActive  -->
                <TextBlock
                    x:Uid="FieldIsActive"
                    Grid.Row="7"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="7"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <ToggleSwitch
                        Margin="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsEnabled="False"
                        IsOn="{x:Bind ViewModel.ChatDetailsDto.IsActiveChat, Mode=OneWay}" />
                </StackPanel>
                <!--  IsActive  -->
                <TextBlock
                    x:Uid="FieldIsBanned"
                    Grid.Row="8"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="8"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <ToggleSwitch
                        Margin="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsEnabled="False"
                        IsOn="{x:Bind ViewModel.ChatDetailsDto.IsBanned, Mode=OneWay}" />
                </StackPanel>
                <!--  IsChannel  -->
                <TextBlock
                    x:Uid="FieldIsChannel"
                    Grid.Row="8"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="8"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <ToggleSwitch
                        Margin="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsEnabled="False"
                        IsOn="{x:Bind ViewModel.ChatDetailsDto.IsChannel, Mode=OneWay}" />
                </StackPanel>
                <!--  IsGroup  -->
                <TextBlock
                    x:Uid="FieldIsGroup"
                    Grid.Row="9"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="9"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <ToggleSwitch
                        Margin="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsEnabled="False"
                        IsOn="{x:Bind ViewModel.ChatDetailsDto.IsGroup, Mode=OneWay}" />
                </StackPanel>
                <!--  IsForum  -->
                <TextBlock
                    x:Uid="FieldIsForum"
                    Grid.Row="9"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="9"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <ToggleSwitch
                        Margin="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsEnabled="False"
                        IsOn="{x:Bind ViewModel.ChatDetailsDto.IsForum, Mode=OneWay}" />
                </StackPanel>
            </Grid>
        </Grid>
    </ContentControl>
</common:TgPageBase>