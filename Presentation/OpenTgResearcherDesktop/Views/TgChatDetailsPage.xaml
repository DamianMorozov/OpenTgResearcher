                                HorizontalContentAlignment="Left"
                                Click="OnClipboardSilentWriteClick"
                                CornerRadius="10"
                                Tag="{x:Bind ViewModel.ChatDetailsDto.SlowMode, Mode=OneWay}">
                                <SymbolIcon Symbol="Copy" />
                            </Button>
                        </StackPanel>
                        <!--  AvailableReactions  -->
                        <TextBlock
                            x:Uid="FieldAvailableReactions"
                            Grid.Row="6"
                            Grid.Column="2"
                            Margin="12,7,7,2"
                            TextAlignment="Left" />
                        <StackPanel
                            Grid.Row="6"
                            Grid.Column="3"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="7,7,7,2"
                                Text="{x:Bind ViewModel.ChatDetailsDto.AvailableReactions, Mode=OneWay}"
                                TextAlignment="Left" />
                            <!--  Copy button  -->
                            <Button
                                Margin="5,5,0,0"
                                HorizontalContentAlignment="Left"
                                Click="OnClipboardSilentWriteClick"
                                CornerRadius="10"
                                Tag="{x:Bind ViewModel.ChatDetailsDto.AvailableReactions, Mode=OneWay}">
                                <SymbolIcon Symbol="Copy" />
                            </Button>
                        </StackPanel>
                        <!--  TtlPeriod  -->
                        <TextBlock
                            x:Uid="FieldTtlPeriod"
                            Grid.Row="7"
                            Grid.Column="0"
                            Margin="2,7,7,2"
                            TextAlignment="Left" />
                        <StackPanel
                            Grid.Row="7"
                            Grid.Column="1"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="7,7,7,2"
                                Text="{x:Bind ViewModel.ChatDetailsDto.TtlPeriod, Mode=OneWay}"
                                TextAlignment="Left"
                                TextWrapping="WrapWholeWords" />
                            <!--  Copy button  -->
                            <Button
                                Margin="5,5,0,0"
                                HorizontalContentAlignment="Left"
                                Click="OnClipboardSilentWriteClick"
                                CornerRadius="10"
                                Tag="{x:Bind ViewModel.ChatDetailsDto.TtlPeriod, Mode=OneWay}">
                                <SymbolIcon Symbol="Copy" />
                            </Button>
                        </StackPanel>
                        <!--  IsActive  -->
                        <TextBlock
                            x:Uid="FieldIsActive"
                            Grid.Row="7"
                            Grid.Column="2"
                            Margin="12,7,7,2"
                            TextAlignment="Left" />
                        <StackPanel
                            Grid.Row="7"
                            Grid.Column="3"
                            Orientation="Horizontal">
                            <ToggleSwitch
                                Margin="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsEnabled="False"
                                IsOn="{x:Bind ViewModel.ChatDetailsDto.IsActiveChat, Mode=OneWay}" />
                        </StackPanel>
                        <!--  IsActive  -->
                        <TextBlock
                            x:Uid="FieldIsBanned"
                            Grid.Row="8"
                            Grid.Column="0"
                            Margin="2,7,7,2"
                            TextAlignment="Left" />
                        <StackPanel
                            Grid.Row="8"
                            Grid.Column="1"
                            Orientation="Horizontal">
                            <ToggleSwitch
                                Margin="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsEnabled="False"
                                IsOn="{x:Bind ViewModel.ChatDetailsDto.IsBanned, Mode=OneWay}" />
                        </StackPanel>
                        <!--  IsChannel  -->
                        <TextBlock
                            x:Uid="FieldIsChannel"
                            Grid.Row="8"
                            Grid.Column="2"
                            Margin="12,7,7,2"
                            TextAlignment="Left" />
                        <StackPanel
                            Grid.Row="8"
                            Grid.Column="3"
                            Orientation="Horizontal">
                            <ToggleSwitch
                                Margin="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsEnabled="False"
                                IsOn="{x:Bind ViewModel.ChatDetailsDto.IsChannel, Mode=OneWay}" />
                        </StackPanel>
                        <!--  IsGroup  -->
                        <TextBlock
                            x:Uid="FieldIsGroup"
                            Grid.Row="9"
                            Grid.Column="0"
                            Margin="2,7,7,2"
                            TextAlignment="Left" />
                        <StackPanel
                            Grid.Row="9"
                            Grid.Column="1"
                            Orientation="Horizontal">
                            <ToggleSwitch
                                Margin="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsEnabled="False"
                                IsOn="{x:Bind ViewModel.ChatDetailsDto.IsGroup, Mode=OneWay}" />
                        </StackPanel>
                        <!--  IsForum  -->
                        <TextBlock
                            x:Uid="FieldIsForum"
                            Grid.Row="9"
                            Grid.Column="2"
                            Margin="12,7,7,2"
                            TextAlignment="Left" />
                        <StackPanel
                            Grid.Row="9"
                            Grid.Column="3"
                            Orientation="Horizontal">
                            <ToggleSwitch
                                Margin="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsEnabled="False"
                                IsOn="{x:Bind ViewModel.ChatDetailsDto.IsForum, Mode=OneWay}" />
                        </StackPanel>
                    </Grid>
                </ScrollView>
            </Expander>
        </ContentControl>
        <!--  Chat participants  -->
        <ContentControl
            Grid.Row="5"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch">
            <Expander
                x:Uid="ExpanderChatParticipants"
                Margin="{StaticResource ExpanderMargin}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsEnabled="{x:Bind ViewModel.IsDownloading, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}"
                IsExpanded="False"
                Visibility="{x:Bind ViewModel.LicenseService.CurrentLicense.LicenseType, Converter={StaticResource LicenseTypeToVisibilityConverter}, Mode=OneWay}">
                <Grid Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <!--  Get participants  -->
                    <Button
                        Margin="0,0,5,5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Command="{x:Bind ViewModel.GetParticipantsCommand}"
                        IsEnabled="{x:Bind ViewModel.IsOnlineReady, Mode=OneWay}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <FontIcon Margin="0,0,10,0" Glyph="&#xe777;" />
                            <TextBlock
                                x:Uid="TextBlockGetParticipants"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!--  List view with participants  -->
                    <ListView
                        x:Name="ListViewParticipants"
                        Grid.Row="1"
                        MaxHeight="1000"
                        ItemTemplate="{StaticResource ParticipantsViewTemplate}"
                        ItemsSource="{x:Bind ViewModel.UserDtos, Mode=OneWay}">
                        <!--  The ItemsStackPanel must be edited to update the following two properties  -->
                        <!--  These properties allow the list to grow from the bottom  -->
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel VerticalAlignment="Top" ItemsUpdatingScrollMode="KeepLastItemInView" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <!--  This setter property is created so ListViewItems correctly align to the left or right.  -->
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Expander>
        </ContentControl>
        <!--  Chat statistics  -->
        <ContentControl
            Grid.Row="6"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch">
            <Expander
                x:Uid="ExpanderChatStatistics"
                Margin="{StaticResource ExpanderMargin}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsEnabled="{x:Bind ViewModel.IsDownloading, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}"
                IsExpanded="False"
                Visibility="{x:Bind ViewModel.LicenseService.CurrentLicense.LicenseType, Converter={StaticResource LicenseTypeToVisibilityConverter}, Mode=OneWay}">
                <Grid Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <!--  Statistics calculation button  -->
                    <Button
                        Margin="0,0,5,5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Command="{x:Bind ViewModel.CalcChatStatisticsCommand}"
                        IsEnabled="{x:Bind ViewModel.IsOnlineReady, Mode=OneWay}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <FontIcon Margin="0,0,10,0" Glyph="&#xe777;" />
                            <TextBlock
                                x:Uid="TextBlockCalcChatStatistics"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!--  ChatStatisticsDto  -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <!--  DtStart  -->
                        <TextBlock x:Uid="TextBlockDtStart" VerticalAlignment="Center" />
                        <DatePicker
                            Grid.Column="1"
                            Margin="10,5,0,10"
                            HorizontalAlignment="Left"
                            SelectedDate="{x:Bind ViewModel.ChatStatisticsDto.DtStart, Mode=TwoWay}" />
                        <!--  DtEnd  -->
                        <TextBlock
                            x:Uid="TextBlockDtEnd"
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center" />
                        <DatePicker
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10,01,0,10"
                            SelectedDate="{x:Bind ViewModel.ChatStatisticsDto.DtEnd, Mode=TwoWay}" />
                        <!--  User and bot statistics  -->
                        <TextBlock
                            x:Uid="TextBlockUsers"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="2"
                            Margin="50,0,0,0"
                            VerticalAlignment="Center"
                            Text="" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="3"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Text="{x:Bind ViewModel.ChatStatisticsDto.UsersCount, Mode=OneWay}" />
                        <TextBlock
                            x:Uid="TextBlockBots"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="4"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="5"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Text="{x:Bind ViewModel.ChatStatisticsDto.BotsCount, Mode=OneWay}" />
                        <!--  List of users and number of messages (UserDtos)  -->
                        <ListView
                            Grid.Row="2"
                            Grid.ColumnSpan="7"
                            MaxHeight="1000"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            ItemsSource="{x:Bind ViewModel.ChatStatisticsDto.UserWithCountDtos}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="users:TgEfUserWithCountDto">
                                    <StackPanel
                                        Padding="5"
                                        Orientation="Horizontal"
                                        Spacing="10">
                                        <!--  Id  -->
                                        <TextBlock x:Uid="FieldId" Margin="20,0,0,0" />
                                        <!--  Sensitive data  -->
                                        <TextBlock
                                            Margin="0,5,5,0"
                                            Text="{x:Bind UserDto.SensitiveData, Mode=OneWay}"
                                            Visibility="{x:Bind UserDto.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                                        <!--  Id  -->
                                        <TextBlock
                                            Width="Auto"
                                            Margin="0,0,0,0"
                                            Text="{x:Bind UserDto.Id}"
                                            Visibility="{x:Bind UserDto.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        <!--  Copy button  -->
                                        <Button
                                            Margin="5,-2,0,0"
                                            Click="OnClipboardSilentWriteClick"
                                            CornerRadius="10"
                                            Tag="{x:Bind UserDto.Id, Mode=OneWay}">
                                            <SymbolIcon Symbol="Copy" />
                                        </Button>
                                        <!--  FirstLastName  -->
                                        <TextBlock x:Uid="FieldFirstName" Margin="20,0,0,0" />
                                        <!--  Sensitive data  -->
                                        <TextBlock
                                            Margin="0,5,5,0"
                                            Text="{x:Bind UserDto.SensitiveData, Mode=OneWay}"
                                            Visibility="{x:Bind UserDto.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                                        <!--  FirstLastName  -->
                                        <TextBlock
                                            Margin="0,0,0,0"
                                            Text="{x:Bind UserDto.FirstLastName}"
                                            Visibility="{x:Bind UserDto.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        <!--  Copy button  -->
                                        <Button
                                            Margin="5,-2,0,0"
                                            Click="OnClipboardSilentWriteClick"
                                            CornerRadius="10"
                                            Tag="{x:Bind UserDto.FirstLastName, Mode=OneWay}">
                                            <SymbolIcon Symbol="Copy" />
                                        </Button>
                                        <!--  Count  -->
                                        <TextBlock x:Uid="FieldMessagesCount" Margin="20,0,0,0" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            FontWeight="SemiBold"
                                            Text="{x:Bind Count}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>
            </Expander>
        </ContentControl>
        <!--  Content with messages and media  -->
        <ContentControl
            Grid.Row="7"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            Visibility="{x:Bind ViewModel.IsEnabledContent, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Expander
                x:Uid="ExpanderContent"
                Margin="{StaticResource ExpanderMargin}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsExpanded="False">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <!--  Empty data  -->
                    <TextBlock
                        x:Uid="FieldEmptyData"
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{x:Bind ViewModel.EmptyData, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <!--  Data  -->
                    <ScrollView
                        Grid.Row="1"
                        Margin="0,0,10,0"
                        HorizontalScrollMode="Disabled"
                        VerticalScrollMode="Auto"
                        Visibility="{x:Bind ViewModel.EmptyData, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <!--  List view with messages  -->
                            <ListView
                                x:Name="ListViewMessages"
                                MaxHeight="1000"
                                ItemTemplate="{StaticResource MessagesViewTemplate}"
                                ItemsSource="{x:Bind ViewModel.MessageDtos, Mode=OneWay}"
                                Visibility="{x:Bind ViewModel.IsImageViewerVisible, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                <!--  The ItemsStackPanel must be edited to update the following two properties  -->
                                <!--  These properties allow the list to grow from the bottom  -->
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsStackPanel VerticalAlignment="Top" ItemsUpdatingScrollMode="KeepLastItemInView" />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <!--  This setter property is created so ListViewItems correctly align to the left or right.  -->
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                            <!--  Full-size image on top of ListView  -->
                            <Border
                                Grid.Row="1"
                                Grid.RowSpan="2"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="#CC000000"
                                IsHitTestVisible="{x:Bind ViewModel.IsImageViewerVisible, Mode=OneWay}">
                                <Image
                                    x:Name="FullScreenImage"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Stretch="Uniform"
                                    Tapped="OnFullScreenImageTapped"
                                    Visibility="{x:Bind ViewModel.IsImageViewerVisible, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </Border>
                        </Grid>
                    </ScrollView>
                </Grid>
            </Expander>
        </ContentControl>
    </Grid>
</common:TgPageBase>