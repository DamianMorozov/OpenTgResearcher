<common:TgPageBase
    x:Class="OpenTgResearcherDesktop.Views.TgChatInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:OpenTgResearcherDesktop.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:OpenTgResearcherDesktop.Helpers"
    xmlns:l="using:WinUI3Localizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:messages="using:TgStorage.Domain.Messages"
    xmlns:styles="using:OpenTgResearcherDesktop.Styles"
    xmlns:users="using:TgStorage.Domain.Users"
    xmlns:viewmodels="using:OpenTgResearcherDesktop.ViewModels"
    xmlns:views="using:OpenTgResearcherDesktop.Views"
    d:DataContext="{d:DesignInstance Type=viewmodels:TgChatInfoViewModel}"
    mc:Ignorable="d">

    <ContentControl
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
        IsEnabled="{x:Bind ViewModel.IsOnlineProcessing, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
        Visibility="{x:Bind ViewModel.IsStorageProcessing, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
        <Border
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{x:Bind ViewModel.IsOnlineProcessing, Mode=OneWay, Converter={StaticResource BoolToObjectConverter}}"
            CornerRadius="5">
            <Grid Margin="0,0,10,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <!--  Update chat details  -->
                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{x:Bind ViewModel.UpdateChatSettingsCommand}"
                    IsEnabled="{x:Bind ViewModel.IsOnlineReady, Mode=OneWay}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <FontIcon Margin="0,0,10,0" Glyph="&#xe777;" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            l:Uids.Uid="TextBlockUpdateChatDetails" />
                    </StackPanel>
                </Button>
                <!--  Title  -->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    l:Uids.Uid="FieldTitle"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.Title, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.Title, Mode=OneWay}" />
                </StackPanel>
                <!--  Type  -->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    l:Uids.Uid="FieldType"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.Type, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.Type, Mode=OneWay}" />
                </StackPanel>
                <!--  Id  -->
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    l:Uids.Uid="FieldId"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <!--  Sensitive data  -->
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.SensitiveData, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.Id, Mode=OneWay}"
                        TextAlignment="Left"
                        Visibility="{x:Bind ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.Id, Mode=OneWay}" />
                </StackPanel>
                <!--  UserName  -->
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    l:Uids.Uid="FieldUserName"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.UserName, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.UserName, Mode=OneWay}" />
                </StackPanel>
                <!--  InviteLink  -->
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    l:Uids.Uid="FieldInviteLink"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="3"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.InviteLink, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.InviteLink, Mode=OneWay}" />
                </StackPanel>
                <!--  Description  -->
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    l:Uids.Uid="FieldDescription"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="3"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.Description, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.Description, Mode=OneWay}" />
                </StackPanel>
                <!--  Permissions  -->
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    l:Uids.Uid="FieldPermissions"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="4"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.Permissions, Mode=OneWay}"
                        TextAlignment="Left"
                        TextWrapping="WrapWholeWords" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.Permissions, Mode=OneWay}" />
                </StackPanel>
                <!--  About  -->
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    l:Uids.Uid="FieldAbout"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="4"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.About, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.About, Mode=OneWay}" />
                </StackPanel>
                <!--  Participants count  -->
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    l:Uids.Uid="FieldParticipantsCount"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="5"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.ParticipantsCount, Mode=OneWay}"
                        TextAlignment="Left"
                        TextWrapping="WrapWholeWords" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.ParticipantsCount, Mode=OneWay}" />
                </StackPanel>
                <!--  OnlineCount  -->
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    l:Uids.Uid="FieldOnlineCount"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="5"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.OnlineCount, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.OnlineCount, Mode=OneWay}" />
                </StackPanel>
                <!--  SlowMode  -->
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    l:Uids.Uid="FieldSlowMode"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="6"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.SlowMode, Mode=OneWay}"
                        TextAlignment="Left"
                        TextWrapping="WrapWholeWords" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.SlowMode, Mode=OneWay}" />
                </StackPanel>
                <!--  Available reactions  -->
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    l:Uids.Uid="FieldAvailableReactions"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="6"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.AvailableReactions, Mode=OneWay}"
                        TextAlignment="Left" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.AvailableReactions, Mode=OneWay}" />
                </StackPanel>
                <!--  TtlPeriod  -->
                <TextBlock
                    Grid.Row="7"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    l:Uids.Uid="FieldTtlPeriod"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="7"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,10,10,2"
                        Text="{x:Bind ViewModel.ChatDetailsDto.TtlPeriod, Mode=OneWay}"
                        TextAlignment="Left"
                        TextWrapping="WrapWholeWords" />
                    <styles:TgAnimatedClipboardButton
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.ChatDetailsDto.TtlPeriod, Mode=OneWay}" />
                </StackPanel>
                <!--  IsActive  -->
                <TextBlock
                    Grid.Row="7"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    l:Uids.Uid="FieldIsActive"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="7"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <ToggleSwitch
                        Margin="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsEnabled="False"
                        IsOn="{x:Bind ViewModel.ChatDetailsDto.IsActiveChat, Mode=OneWay}" />
                </StackPanel>
                <!--  IsActive  -->
                <TextBlock
                    Grid.Row="8"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    l:Uids.Uid="FieldIsBanned"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="8"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <ToggleSwitch
                        Margin="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsEnabled="False"
                        IsOn="{x:Bind ViewModel.ChatDetailsDto.IsBanned, Mode=OneWay}" />
                </StackPanel>
                <!--  IsChannel  -->
                <TextBlock
                    Grid.Row="8"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    l:Uids.Uid="FieldIsChannel"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="8"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <ToggleSwitch
                        Margin="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsEnabled="False"
                        IsOn="{x:Bind ViewModel.ChatDetailsDto.IsChannel, Mode=OneWay}" />
                </StackPanel>
                <!--  IsGroup  -->
                <TextBlock
                    Grid.Row="9"
                    Grid.Column="0"
                    Margin="10,10,10,0"
                    l:Uids.Uid="FieldIsGroup"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="9"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <ToggleSwitch
                        Margin="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsEnabled="False"
                        IsOn="{x:Bind ViewModel.ChatDetailsDto.IsGroup, Mode=OneWay}" />
                </StackPanel>
                <!--  IsForum  -->
                <TextBlock
                    Grid.Row="9"
                    Grid.Column="2"
                    Margin="12,7,7,2"
                    l:Uids.Uid="FieldIsForum"
                    TextAlignment="Left" />
                <StackPanel
                    Grid.Row="9"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <ToggleSwitch
                        Margin="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsEnabled="False"
                        IsOn="{x:Bind ViewModel.ChatDetailsDto.IsForum, Mode=OneWay}" />
                </StackPanel>
            </Grid>
        </Border>
    </ContentControl>
</common:TgPageBase>