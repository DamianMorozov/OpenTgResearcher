<common:TgPageBase
    x:Class="OpenTgResearcherDesktop.Views.TgChatParticipantsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:OpenTgResearcherDesktop.Common"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:OpenTgResearcherDesktop.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:messages="using:TgStorage.Domain.Messages"
    xmlns:styles="using:OpenTgResearcherDesktop.Styles"
    xmlns:users="using:TgStorage.Domain.Users"
    xmlns:viewmodels="using:OpenTgResearcherDesktop.ViewModels"
    xmlns:views="using:OpenTgResearcherDesktop.Views"
    d:DataContext="{d:DesignInstance Type=viewmodels:TgChatParticipantsViewModel}"
    mc:Ignorable="d">

    <common:TgPageBase.Resources>
        <!--  Participants data template  -->
        <DataTemplate x:Key="ParticipantsViewTemplate" x:DataType="users:TgEfUserDto">
            <Button
                Margin="-5,5,5,-5"
                HorizontalAlignment="Stretch"
                Click="OnUserClick"
                CornerRadius="10"
                Tag="{x:Bind Uid, Mode=OneWay}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <!--  ID  -->
                        <TextBlock
                            x:Uid="TextBlockId"
                            Margin="5,5,5,0"
                            Style="{ThemeResource BodyTextBlockStyle}" />
                        <TextBlock
                            Margin="5,5,5,0"
                            Text="{Binding LoadStateService.SensitiveData, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                        <TextBlock
                            Margin="10,5,5,0"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{x:Bind Id, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <styles:TgAnimatedClipboardButton
                            Margin="0,-5,0,0"
                            Click="OnClipboardSilentWriteClick"
                            Style="{StaticResource ClipboardAnimatedButtonStyle}"
                            Tag="{x:Bind Id, Mode=OneWay}" />
                        <!--  MainUserName  -->
                        <TextBlock
                            x:Uid="FieldUserName"
                            Margin="20,5,7,2"
                            TextAlignment="Left" />
                        <TextBlock
                            Margin="5,5,5,0"
                            Text="{Binding LoadStateService.SensitiveData, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                        <TextBlock
                            Margin="5,5,5,0"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{x:Bind MainUserName, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <styles:TgAnimatedClipboardButton
                            Margin="0,-5,0,0"
                            Click="OnClipboardSilentWriteClick"
                            Style="{StaticResource ClipboardAnimatedButtonStyle}"
                            Tag="{x:Bind MainUserName, Mode=OneWay}" />
                        <!--  AccessHash  -->
                        <TextBlock
                            x:Uid="FieldAccessHash"
                            Margin="20,5,7,2"
                            TextAlignment="Left" />
                        <TextBlock
                            Margin="5,5,5,0"
                            Text="{Binding LoadStateService.SensitiveData, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                        <TextBlock
                            Margin="5,5,5,0"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{x:Bind AccessHash, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <styles:TgAnimatedClipboardButton
                            Margin="0,-5,0,0"
                            Click="OnClipboardSilentWriteClick"
                            Style="{StaticResource ClipboardAnimatedButtonStyle}"
                            Tag="{x:Bind AccessHash, Mode=OneWay}" />
                        <!--  IsUserActive  -->
                        <TextBlock
                            x:Uid="FieldIsActive"
                            Margin="5,5,7,2"
                            TextAlignment="Left" />
                        <ToggleSwitch
                            Margin="5,-2,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsEnabled="False"
                            IsOn="{x:Bind IsUserActive, Mode=OneWay}" />
                        <!--  IsBot  -->
                        <TextBlock
                            x:Uid="FieldIsBot"
                            Margin="-50,5,7,2"
                            TextAlignment="Left" />
                        <ToggleSwitch
                            Margin="-15,-2,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsEnabled="False"
                            IsOn="{x:Bind IsBot, Mode=OneWay}" />
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <!--  LastSeenAgo  -->
                        <TextBlock
                            x:Uid="FieldLastSeenAgo"
                            Margin="-50,5,7,2"
                            TextAlignment="Left" />
                        <TextBlock
                            Margin="5,5,5,0"
                            Text="{Binding LoadStateService.SensitiveData, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                        <TextBlock
                            Margin="5,5,5,0"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{x:Bind LastSeenAgoAsString, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <styles:TgAnimatedClipboardButton
                            Margin="0,-5,0,0"
                            Click="OnClipboardSilentWriteClick"
                            Style="{StaticResource ClipboardAnimatedButtonStyle}"
                            Tag="{x:Bind LastSeenAgoAsString, Mode=OneWay}" />
                        <!--  RestrictionReason  -->
                        <TextBlock
                            x:Uid="FieldRestrictionReason"
                            Margin="20,5,7,2"
                            TextAlignment="Left" />
                        <TextBlock
                            Margin="5,5,5,0"
                            Text="{Binding LoadStateService.SensitiveData, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                        <TextBlock
                            Margin="5,5,5,0"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{x:Bind RestrictionReason, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <styles:TgAnimatedClipboardButton
                            Margin="0,-5,0,0"
                            Click="OnClipboardSilentWriteClick"
                            Style="{StaticResource ClipboardAnimatedButtonStyle}"
                            Tag="{x:Bind RestrictionReason, Mode=OneWay}" />
                        <!--  DisplayName  -->
                        <TextBlock
                            x:Uid="FieldFirstName"
                            Margin="5,0,7,2"
                            TextAlignment="Left" />
                        <!--  Sensitive data  -->
                        <TextBlock
                            Margin="5,5,5,0"
                            Text="{Binding LoadStateService.SensitiveData, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                        <TextBlock
                            Margin="5,0,5,0"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{x:Bind DisplayName, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <styles:TgAnimatedClipboardButton
                            Margin="0,-5,0,0"
                            Click="OnClipboardSilentWriteClick"
                            Style="{StaticResource ClipboardAnimatedButtonStyle}"
                            Tag="{x:Bind DisplayName, Mode=OneWay}" />
                        <!--  PhoneNumber  -->
                        <TextBlock
                            x:Uid="FieldPhoneNumber"
                            Margin="5,0,7,2"
                            TextAlignment="Left" />
                        <!--  Sensitive data  -->
                        <TextBlock
                            Margin="5,5,5,0"
                            Text="{Binding LoadStateService.SensitiveData, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                        <TextBlock
                            Margin="5,0,5,0"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{x:Bind PhoneNumber, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <styles:TgAnimatedClipboardButton
                            Margin="0,-5,0,0"
                            Click="OnClipboardSilentWriteClick"
                            Style="{StaticResource ClipboardAnimatedButtonStyle}"
                            Tag="{x:Bind PhoneNumber, Mode=OneWay}" />
                        <!--  Status  -->
                        <TextBlock
                            x:Uid="FieldStatus"
                            Margin="5,0,7,2"
                            TextAlignment="Left" />
                        <!--  Sensitive data  -->
                        <TextBlock
                            Margin="5,5,5,0"
                            Text="{Binding LoadStateService.SensitiveData, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                        <TextBlock
                            Margin="5,0,5,0"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{x:Bind Status, Mode=OneWay}"
                            Visibility="{Binding ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <styles:TgAnimatedClipboardButton
                            Margin="0,-5,0,0"
                            Click="OnClipboardSilentWriteClick"
                            Style="{StaticResource ClipboardAnimatedButtonStyle}"
                            Tag="{x:Bind Status, Mode=OneWay}" />
                        <!--  User deleted  -->
                        <TextBlock
                            x:Uid="TextBlockMessageDeleted"
                            Margin="5,0,5,0"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Visibility="{x:Bind IsDeleted, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>
                </Grid>
            </Button>
        </DataTemplate>
    </common:TgPageBase.Resources>

    <ContentControl
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
        IsEnabled="{x:Bind ViewModel.IsOnlineProcessing, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
        Visibility="{x:Bind ViewModel.IsStorageProcessing, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
        <Border
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{x:Bind ViewModel.IsOnlineProcessing, Mode=OneWay, Converter={StaticResource BoolToObjectConverter}}"
            CornerRadius="5">
            <Grid Margin="0,0,10,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <!--  Load participants  -->
                <Button
                    Grid.Column="0"
                    Margin="0,0,5,5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{x:Bind ViewModel.LoadParticipantsCommand}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <FontIcon Margin="0,0,10,0" Glyph="&#xe777;" />
                        <TextBlock
                            x:Uid="TextBlockLoadParticipants"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <!--  Stop participants  -->
                <Button
                    Grid.Column="1"
                    Margin="0,0,5,5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{x:Bind ViewModel.StopParticipantsCommand}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <FontIcon Margin="0,0,10,0" Glyph="&#xe777;" />
                        <TextBlock
                            x:Uid="TextBlockStopParticipants"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <!--  Get participants from messages  -->
                <Button
                    Grid.Column="2"
                    Margin="0,0,5,5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{x:Bind ViewModel.GetParticipantsFromMessagesCommand}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <FontIcon Margin="0,0,10,0" Glyph="&#xe777;" />
                        <TextBlock
                            x:Uid="TextBlockGetParticipantsFromMessages"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <!--  Get participants  -->
                <Button
                    Grid.Column="3"
                    Margin="0,0,5,5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{x:Bind ViewModel.GetParticipantsCommand}"
                    IsEnabled="{x:Bind ViewModel.IsOnlineReady, Mode=OneWay}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <FontIcon Margin="0,0,10,0" Glyph="&#xe777;" />
                        <TextBlock
                            x:Uid="TextBlockGetParticipants"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <!--  Clear participants  -->
                <Button
                    Grid.Column="4"
                    Margin="0,0,5,5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{x:Bind ViewModel.ClearParticipantsCommand}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <FontIcon Margin="0,0,10,0" Glyph="&#xe777;" />
                        <TextBlock
                            x:Uid="TextBlockClearParticipants"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <!--  Data in storage  -->
                <ContentControl
                    Grid.Row="1"
                    Grid.ColumnSpan="5"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Visibility="{x:Bind ViewModel.IsStorageProcessing, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <Expander
                        x:Uid="ExpanderDataInStorage"
                        Margin="{StaticResource ExpanderMargin}"
                        Padding="{StaticResource ExpanderPadding}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        IsExpanded="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <!--  Filter by Id  -->
                            <TextBlock
                                x:Uid="FieldFilterById"
                                Grid.Column="2"
                                Margin="5,5,5,5"
                                TextAlignment="Left" />
                            <ToggleSwitch
                                Grid.Column="3"
                                Margin="5,-10,-65,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsOn="{x:Bind ViewModel.IsFilterById, Mode=TwoWay}" />
                            <Grid />
                            <!--  Filter by Name  -->
                            <TextBlock
                                x:Uid="FieldFilterByName"
                                Grid.Column="0"
                                Margin="5,5,5,5"
                                TextAlignment="Left" />
                            <ToggleSwitch
                                Grid.Column="1"
                                Margin="5,-10,-65,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsOn="{x:Bind ViewModel.IsFilterByName, Mode=TwoWay}" />
                            <!--  Text for filter  -->
                            <TextBox
                                x:Uid="FieldFilter"
                                Grid.Column="4"
                                Margin="5,0,5,5"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                Text="{x:Bind ViewModel.FilterText, Mode=TwoWay}" />
                            <!--  Search  -->
                            <Button
                                Grid.Column="5"
                                Margin="5,0,5,5"
                                HorizontalAlignment="Stretch"
                                Command="{x:Bind Path=ViewModel.SearchCommand}">
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                    <FontIcon Glyph="&#xE721;" />
                                    <TextBlock
                                        x:Uid="ActionSearch"
                                        Margin="10,0,10,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                            <!--  Table  -->
                            <ScrollView
                                Grid.Row="2"
                                Grid.ColumnSpan="7"
                                Margin="0,0,15,0"
                                VerticalScrollMode="Auto">
                                <!--  Data  -->
                                <controls:DataGrid
                                    x:Name="DataGridChats"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Top"
                                    AutoGenerateColumns="False"
                                    Background="Transparent"
                                    CanUserSortColumns="False"
                                    DoubleTapped="{x:Bind ViewModel.DataGrid_DoubleTapped, Mode=OneWay}"
                                    HeadersVisibility="Column"
                                    ItemsSource="{x:Bind ViewModel.UserDtos, Mode=OneWay}">
                                    <controls:DataGrid.Columns>
                                        <!--  Id  -->
                                        <styles:TgBindableDataGridTemplateColumn
                                            x:Uid="ColumnIdTemplate"
                                            ColumnSensitive="{StaticResource ColumnSensitiveTemplate}"
                                            ColumnValue="{StaticResource ColumnIdTemplate}"
                                            ColumnVisible="{x:Bind ViewModel.IsDisplaySensitiveData, Mode=OneWay}"
                                            ColumnWidth="Auto"
                                            OwnerGrid="{x:Bind DataGridChats}" />
                                        <!--  IsUserActive  -->
                                        <styles:TgBindableDataGridTemplateColumn
                                            x:Uid="ColumnIsActiveTemplate"
                                            ColumnSensitive="{StaticResource ColumnSensitiveTemplate}"
                                            ColumnValue="{StaticResource ColumnIsUserActiveTemplate}"
                                            ColumnVisible="{x:Bind ViewModel.IsDisplaySensitiveData, Mode=OneWay}"
                                            ColumnWidth="Auto"
                                            OwnerGrid="{x:Bind DataGridChats}" />
                                        <!--  UserName  -->
                                        <styles:TgBindableDataGridTemplateColumn
                                            x:Uid="ColumnUserNameTemplate"
                                            ColumnSensitive="{StaticResource ColumnSensitiveTemplate}"
                                            ColumnValue="{StaticResource ColumnUserNameTemplate}"
                                            ColumnVisible="{x:Bind ViewModel.IsDisplaySensitiveData, Mode=OneWay}"
                                            ColumnWidth="2*"
                                            OwnerGrid="{x:Bind DataGridChats}" />
                                        <!--  FirstName  -->
                                        <styles:TgBindableDataGridTemplateColumn
                                            x:Uid="ColumnFirstNameTemplate"
                                            ColumnSensitive="{StaticResource ColumnSensitiveTemplate}"
                                            ColumnValue="{StaticResource ColumnFirstNameTemplate}"
                                            ColumnVisible="{x:Bind ViewModel.IsDisplaySensitiveData, Mode=OneWay}"
                                            ColumnWidth="2*"
                                            OwnerGrid="{x:Bind DataGridChats}" />
                                        <!--  LastName  -->
                                        <styles:TgBindableDataGridTemplateColumn
                                            x:Uid="ColumnLastNameTemplate"
                                            ColumnSensitive="{StaticResource ColumnSensitiveTemplate}"
                                            ColumnValue="{StaticResource ColumnLastNameTemplate}"
                                            ColumnVisible="{x:Bind ViewModel.IsDisplaySensitiveData, Mode=OneWay}"
                                            ColumnWidth="2*"
                                            OwnerGrid="{x:Bind DataGridChats}" />
                                        <!--  PhoneNumber  -->
                                        <styles:TgBindableDataGridTemplateColumn
                                            x:Uid="ColumnPhoneTemplate"
                                            ColumnSensitive="{StaticResource ColumnSensitiveTemplate}"
                                            ColumnValue="{StaticResource ColumnPhoneTemplate}"
                                            ColumnVisible="{x:Bind ViewModel.IsDisplaySensitiveData, Mode=OneWay}"
                                            ColumnWidth="Auto"
                                            OwnerGrid="{x:Bind DataGridChats}" />
                                        <!--  MessagesCount  -->
                                        <styles:TgBindableDataGridTemplateColumn
                                            x:Uid="ColumnMessagesTemplate"
                                            ColumnSensitive="{StaticResource ColumnSensitiveTemplate}"
                                            ColumnValue="{StaticResource ColumnMessagesCountTemplate}"
                                            ColumnVisible="{x:Bind ViewModel.IsDisplaySensitiveData, Mode=OneWay}"
                                            ColumnWidth="Auto"
                                            OwnerGrid="{x:Bind DataGridChats}" />
                                        <!--  End  -->
                                    </controls:DataGrid.Columns>
                                </controls:DataGrid>
                            </ScrollView>
                        </Grid>
                    </Expander>
                </ContentControl>
            </Grid>
        </Border>
    </ContentControl>
</common:TgPageBase>