<common:TgPageBase
    x:Class="OpenTgResearcherDesktop.Views.TgChatsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:OpenTgResearcherDesktop.Common"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:OpenTgResearcherDesktop.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:styles="using:OpenTgResearcherDesktop.Styles"
    xmlns:viewmodels="using:OpenTgResearcherDesktop.ViewModels"
    xmlns:views="using:OpenTgResearcherDesktop.Views"
    d:DataContext="{d:DesignInstance Type=viewmodels:TgChatsViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <!--  Load data  -->
        <views:TgLoadDataPage IsOnlineProcessing="{x:Bind ViewModel.IsOnlineProcessing, Mode=OneWay}" IsPageLoad="{x:Bind ViewModel.IsPageLoad, Mode=OneWay}" />
        <!--  Actions  -->
        <ContentControl
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            IsEnabled="{x:Bind ViewModel.IsPageLoad, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}">
            <Expander
                x:Uid="SettingAppActions"
                Margin="{StaticResource ExpanderMargin}"
                Padding="{StaticResource ExpanderPadding}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsExpanded="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!--  Lazy load  -->
                    <Button
                        Margin="0,0,5,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Command="{x:Bind ViewModel.LazyLoadCommand}"
                        IsEnabled="{x:Bind ViewModel.HasMoreItems, Mode=OneWay}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <FontIcon Margin="0,0,10,0" Glyph="&#xE712;" />
                            <TextBlock
                                x:Uid="TextBlockLoadMore"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!--  Update from Telegram  -->
                    <Button
                        Grid.Column="1"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Command="{x:Bind ViewModel.UpdateOnlineCommand}"
                        IsEnabled="{x:Bind ViewModel.IsOnlineReady, Mode=OneWay}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <FontIcon Margin="0,0,10,0" Glyph="&#xe777;" />
                            <TextBlock
                                x:Uid="TextBlockUpdateOnline"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!--  Clear viewing  -->
                    <Button
                        Grid.Column="2"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Command="{x:Bind ViewModel.ClearViewCommand}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <FontIcon Margin="0,0,10,0" Glyph="&#xe894;" />
                            <TextBlock
                                x:Uid="ActionClearView"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!--  Loaded data statistics  -->
                    <TextBlock
                        Grid.Column="3"
                        Margin="5,0,10,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Text="{x:Bind ViewModel.LoadedDataStatistics, Mode=OneWay}"
                        TextAlignment="Center" />
                </Grid>
            </Expander>
        </ContentControl>
        <!--  Data in storage  -->
        <ContentControl
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            Visibility="{x:Bind ViewModel.IsPageLoad, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Expander
                x:Uid="ExpanderDataInStorage"
                Margin="{StaticResource ExpanderMargin}"
                Padding="{StaticResource ExpanderPadding}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsExpanded="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!--  Filter by subscribe  -->
                    <TextBlock
                        x:Uid="FieldFilterBySubscribe"
                        Margin="5,0,5,5"
                        TextAlignment="Left" />
                    <ToggleSwitch
                        Grid.Column="1"
                        Margin="5,-10,-65,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsOn="{x:Bind ViewModel.IsFilterBySubscribe, Mode=TwoWay}" />
                    <!--  Filter by Id  -->
                    <TextBlock
                        x:Uid="FieldFilterById"
                        Grid.Column="2"
                        Margin="5,0,5,5"
                        TextAlignment="Left" />
                    <ToggleSwitch
                        Grid.Column="3"
                        Margin="5,-10,-65,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsOn="{x:Bind ViewModel.IsFilterById, Mode=TwoWay}" />
                    <Grid />
                    <!--  Filter by UserName  -->
                    <TextBlock
                        x:Uid="FieldFilterByUserName"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5,0,5,5"
                        TextAlignment="Left" />
                    <ToggleSwitch
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5,-10,-65,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsOn="{x:Bind ViewModel.IsFilterByUserName, Mode=TwoWay}" />
                    <!--  Filter by Title  -->
                    <TextBlock
                        x:Uid="FieldFilterByTitle"
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="5,0,5,5"
                        TextAlignment="Left" />
                    <ToggleSwitch
                        Grid.Row="1"
                        Grid.Column="3"
                        Margin="5,-10,-65,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        IsOn="{x:Bind ViewModel.IsFilterByTitle, Mode=TwoWay}" />
                    <!--  Text for filter  -->
                    <TextBox
                        x:Uid="FieldFilter"
                        Grid.RowSpan="2"
                        Grid.Column="4"
                        Margin="5,0,5,5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Text="{x:Bind ViewModel.FilterText, Mode=TwoWay}" />
                    <!--  License button: Search  -->
                    <styles:TgLicenseButton
                        Grid.RowSpan="2"
                        Grid.Column="5"
                        Margin="5,0,5,5"
                        HorizontalAlignment="Stretch"
                        Background="{x:Bind ViewModel.LicenseType, Mode=OneWay, Converter={StaticResource LicenseCheckBackgroundConverter}, ConverterParameter=Community}"
                        Command="{x:Bind Path=ViewModel.SearchCommand}"
                        Foreground="{x:Bind ViewModel.LicenseType, Mode=OneWay, Converter={StaticResource LicenseCheckForegroundConverter}, ConverterParameter=Community}"
                        ShowPurchaseLicenseCommand="{x:Bind ViewModel.ShowPurchaseLicenseCommand}"
                        Style="{StaticResource LicenseButtonStyle}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.LicenseType, Mode=OneWay, Converter={StaticResource LicenseCheckTooltipConverter}, ConverterParameter=Community}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <FontIcon Glyph="&#xE721;" />
                            <TextBlock
                                x:Uid="ActionSearch"
                                Margin="10,0,10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </StackPanel>
                    </styles:TgLicenseButton>
                    <!--  Chats table  -->
                    <ScrollView
                        Grid.Row="2"
                        Grid.ColumnSpan="7"
                        Margin="0,0,5,0"
                        VerticalScrollMode="Auto">
                        <!--  Data  -->
                        <controls:DataGrid
                            VerticalAlignment="Top"
                            AutoGenerateColumns="False"
                            CanUserSortColumns="False"
                            DoubleTapped="{x:Bind ViewModel.DataGrid_DoubleTapped, Mode=OneWay}"
                            HeadersVisibility="Column"
                            ItemsSource="{x:Bind ViewModel.Dtos, Mode=OneWay}">
                            <controls:DataGrid.Columns>
                                <!--  ID  -->
                                <controls:DataGridTemplateColumn x:Uid="TemplateColumnId" Width="Auto">
                                    <controls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <!--  Sensitive data  -->
                                                <TextBlock Text="{Binding SensitiveData, Mode=OneWay}" Visibility="{Binding IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                                <!--  Id  -->
                                                <TextBlock Text="{Binding Id, Mode=OneWay}" Visibility="{Binding IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                                            </Grid>
                                        </DataTemplate>
                                    </controls:DataGridTemplateColumn.CellTemplate>
                                </controls:DataGridTemplateColumn>
                                <!--  Is subscribe  -->
                                <controls:DataGridTemplateColumn
                                    x:Uid="TemplateColumnIsSubscribe"
                                    Width="Auto"
                                    CanUserReorder="True"
                                    CanUserSort="True">
                                    <controls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ToggleButton
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                IsChecked="{Binding IsSubscribe, Mode=OneWay}"
                                                IsEnabled="False" />
                                        </DataTemplate>
                                    </controls:DataGridTemplateColumn.CellTemplate>
                                </controls:DataGridTemplateColumn>
                                <!--  Is access  -->
                                <controls:DataGridTemplateColumn
                                    x:Uid="TemplateColumnIsAccess"
                                    Width="Auto"
                                    CanUserReorder="True"
                                    CanUserSort="True">
                                    <controls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ToggleButton
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                IsChecked="{Binding IsUserAccess, Mode=OneWay}"
                                                IsEnabled="False" />
                                        </DataTemplate>
                                    </controls:DataGridTemplateColumn.CellTemplate>
                                </controls:DataGridTemplateColumn>
                                <!--  Is active  -->
                                <controls:DataGridTemplateColumn
                                    x:Uid="TemplateColumnIsActive"
                                    Width="Auto"
                                    CanUserReorder="True"
                                    CanUserSort="True">
                                    <controls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ToggleButton
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                IsChecked="{Binding IsSourceActive, Mode=OneWay}"
                                                IsEnabled="False" />
                                        </DataTemplate>
                                    </controls:DataGridTemplateColumn.CellTemplate>
                                </controls:DataGridTemplateColumn>
                                <!--  Auto-update  -->
                                <controls:DataGridTemplateColumn
                                    x:Uid="TemplateColumnAutoUpd"
                                    Width="Auto"
                                    CanUserReorder="True"
                                    CanUserSort="True">
                                    <controls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ToggleButton
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                IsChecked="{Binding IsAutoUpdate, Mode=OneWay}"
                                                IsEnabled="False" />
                                        </DataTemplate>
                                    </controls:DataGridTemplateColumn.CellTemplate>
                                </controls:DataGridTemplateColumn>
                                <!--  User name  -->
                                <controls:DataGridTemplateColumn x:Uid="TemplateColumnUserName" Width="2*">
                                    <controls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <!--  Sensitive data  -->
                                                <TextBlock Text="{Binding SensitiveData, Mode=OneWay}" Visibility="{Binding IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                                <!--  Id  -->
                                                <TextBlock Text="{Binding UserName, Mode=OneWay}" Visibility="{Binding IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                                            </Grid>
                                        </DataTemplate>
                                    </controls:DataGridTemplateColumn.CellTemplate>
                                </controls:DataGridTemplateColumn>
                                <!--  Title  -->
                                <controls:DataGridTemplateColumn x:Uid="TemplateColumnTitle" Width="3*">
                                    <controls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <!--  Sensitive data  -->
                                                <TextBlock Text="{Binding SensitiveData, Mode=OneWay}" Visibility="{Binding IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                                <!--  Id  -->
                                                <TextBlock Text="{Binding Title, Mode=OneWay}" Visibility="{Binding IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                                            </Grid>
                                        </DataTemplate>
                                    </controls:DataGridTemplateColumn.CellTemplate>
                                </controls:DataGridTemplateColumn>
                                <!--  First ID  -->
                                <controls:DataGridTemplateColumn
                                    x:Uid="TemplateColumnFirstId"
                                    Width="Auto"
                                    CanUserReorder="True"
                                    CanUserSort="True">
                                    <controls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <!--  Sensitive data  -->
                                                <TextBlock
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Center"
                                                    HorizontalTextAlignment="Center"
                                                    Text="{Binding SensitiveData, Mode=OneWay}"
                                                    Visibility="{Binding IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                                <!--  Id  -->
                                                <TextBlock
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Center"
                                                    HorizontalTextAlignment="Center"
                                                    Text="{Binding FirstId, Mode=OneWay}"
                                                    Visibility="{Binding IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                                            </Grid>
                                        </DataTemplate>
                                    </controls:DataGridTemplateColumn.CellTemplate>
                                </controls:DataGridTemplateColumn>
                                <!--  Count  -->
                                <controls:DataGridTemplateColumn
                                    x:Uid="TemplateColumnCount"
                                    Width="Auto"
                                    CanUserReorder="True"
                                    CanUserSort="True">
                                    <controls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <!--  Sensitive data  -->
                                                <TextBlock
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Center"
                                                    HorizontalTextAlignment="Center"
                                                    Text="{Binding SensitiveData, Mode=OneWay}"
                                                    Visibility="{Binding IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                                <!--  Id  -->
                                                <TextBlock
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Center"
                                                    HorizontalTextAlignment="Center"
                                                    Text="{Binding Count, Mode=OneWay}"
                                                    Visibility="{Binding IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                                            </Grid>
                                        </DataTemplate>
                                    </controls:DataGridTemplateColumn.CellTemplate>
                                </controls:DataGridTemplateColumn>
                                <!--  Progress  -->
                                <controls:DataGridTemplateColumn
                                    x:Uid="TemplateColumnProgress"
                                    Width="Auto"
                                    CanUserReorder="True"
                                    CanUserSort="True">
                                    <controls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ProgressBar
                                                Margin="5,5,5,5"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                IsIndeterminate="{Binding IsLoad, Mode=OneWay}"
                                                Maximum="100"
                                                Minimum="0"
                                                ToolTipService.ToolTip="{Binding ProgressPercentString, Mode=OneWay}"
                                                Visibility="Visible"
                                                Value="{Binding ProgressPercent, Mode=OneWay}" />
                                        </DataTemplate>
                                    </controls:DataGridTemplateColumn.CellTemplate>
                                </controls:DataGridTemplateColumn>
                                <!--  End  -->
                            </controls:DataGrid.Columns>
                        </controls:DataGrid>
                    </ScrollView>
                </Grid>
            </Expander>
        </ContentControl>
        <!--  Online update  -->
        <ContentControl
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            Visibility="{x:Bind ViewModel.IsPageLoad, Mode=OneWay}">
            <Expander
                x:Uid="SettingAppActions"
                Margin="{StaticResource ExpanderMargin}"
                Padding="{StaticResource ExpanderPadding}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsExpanded="True">
                <Grid Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <!--  ChatsProgressMessage  -->
                    <TextBlock
                        x:Uid="FieldPercentOfChatParsing"
                        Margin="12,7,7,2"
                        VerticalAlignment="Center"
                        TextAlignment="Left" />
                    <!--  Load data from Online  -->
                    <Slider
                        Grid.Column="1"
                        Margin="5,0,10,0"
                        HorizontalAlignment="Stretch"
                        IsEnabled="False"
                        Maximum="{x:Bind ViewModel.ChatsProgressCountAll, Mode=OneWay}"
                        TickFrequency="1"
                        Value="{x:Bind ViewModel.ChatsProgressCounter, Mode=OneWay}" />
                    <!--  Progress string  -->
                    <TextBlock
                        Grid.Column="2"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Text="{x:Bind ViewModel.ChatsProgressString, Mode=OneWay}"
                        TextAlignment="Center" />
                    <!--  Message  -->
                    <TextBlock
                        Grid.Column="3"
                        Margin="12,0,12,0"
                        HorizontalAlignment="Stretch"
                        Text="{x:Bind ViewModel.ChatsProgressMessage, Mode=OneWay}"
                        TextAlignment="Center" />
                </Grid>
            </Expander>
        </ContentControl>
    </Grid>
</common:TgPageBase>