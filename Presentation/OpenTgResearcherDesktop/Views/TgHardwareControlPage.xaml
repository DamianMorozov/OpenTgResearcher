<common:TgPageBase
    x:Class="OpenTgResearcherDesktop.Views.TgHardwareControlPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:OpenTgResearcherDesktop.Common"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:converters="using:OpenTgResearcherDesktop.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:OpenTgResearcherDesktop.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:OpenTgResearcherDesktop.ViewModels"
    xmlns:views="using:OpenTgResearcherDesktop.Views"
    d:DataContext="{d:DesignInstance Type=viewmodels:TgHardwareControlViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <!--  Load data  -->
        <views:TgLoadDataPage Margin="0,0,0,10" Visibility="{x:Bind ViewModel.IsPageLoad, Mode=OneWay}" />
        <!--  Actions  -->
        <ContentControl
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            IsEnabled="{x:Bind ViewModel.IsPageLoad, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="CPU usage" />
                <!--  CPU app usage  -->
                <controls:RadialGauge
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10"
                    BorderThickness="2"
                    IsInteractive="False"
                    Maximum="100"
                    Minimum="0"
                    ScaleWidth="5"
                    TickSpacing="10"
                    Value="{x:Bind ViewModel.CpuApp, Mode=OneWay}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Text="CPU app usage" />
                <!--  CPU total usage  -->
                <controls:RadialGauge
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="10"
                    BorderThickness="2"
                    IsInteractive="False"
                    Maximum="100"
                    Minimum="0"
                    ScaleWidth="5"
                    TickSpacing="10"
                    Value="{x:Bind ViewModel.CpuTotal, Mode=OneWay}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="3"
                    HorizontalAlignment="Center"
                    Text="CPU total usage" />
                <TextBlock
                    Grid.Row="3"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="Memory usage" />
                <!--  Memory app usage  -->
                <controls:RadialGauge
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="10"
                    BorderThickness="2"
                    IsInteractive="False"
                    Maximum="100"
                    Minimum="0"
                    ScaleWidth="5"
                    TickSpacing="10"
                    Value="{x:Bind ViewModel.MemoryAppUsage, Mode=OneWay}" />
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Text="Memory app usage" />
                <!--  Memory total usage  -->
                <controls:RadialGauge
                    Grid.Row="4"
                    Grid.Column="3"
                    Margin="10"
                    BorderThickness="2"
                    IsInteractive="False"
                    Maximum="100"
                    Minimum="0"
                    ScaleWidth="5"
                    TickSpacing="10"
                    Value="{x:Bind ViewModel.MemoryTotalUsage, Mode=OneWay}" />
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="3"
                    HorizontalAlignment="Center"
                    Text="Memory total usage" />
            </Grid>
        </ContentControl>
    </Grid>
</common:TgPageBase>