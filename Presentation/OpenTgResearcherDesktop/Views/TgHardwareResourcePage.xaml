<common:TgPageBase
    x:Class="OpenTgResearcherDesktop.Views.TgHardwareResourcePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:OpenTgResearcherDesktop.Common"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:OpenTgResearcherDesktop.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:styles="using:OpenTgResearcherDesktop.Styles"
    xmlns:viewmodels="using:OpenTgResearcherDesktop.ViewModels"
    xmlns:views="using:OpenTgResearcherDesktop.Views"
    d:DataContext="{d:DesignInstance Type=viewmodels:TgHardwareResourceViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <!--  Load data  -->
        <views:TgLoadDataPage />
        <!--  Actions  -->
        <ContentControl
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            IsEnabled="{x:Bind ViewModel.IsStorageProcessing, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--  CPU usage  -->
                <TextBlock
                    x:Uid="TextBlockCpuUsage"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Style="{StaticResource SubtitleTextBlockStyle}" />
                <!--  CPU app usage  -->
                <controls:RadialGauge
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    BorderThickness="2"
                    IsInteractive="False"
                    Maximum="100"
                    Minimum="0"
                    ScaleWidth="5"
                    TickSpacing="10"
                    Value="{x:Bind ViewModel.CpuApp, Mode=OneWay}" />
                <TextBlock
                    x:Uid="TextBlockCpuAppUsage"
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Style="{StaticResource SubtitleTextBlockStyle}" />
                <!--  CPU total usage  -->
                <controls:RadialGauge
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="5"
                    BorderThickness="2"
                    IsInteractive="False"
                    Maximum="100"
                    Minimum="0"
                    ScaleWidth="5"
                    TickSpacing="10"
                    Value="{x:Bind ViewModel.CpuTotal, Mode=OneWay}" />
                <TextBlock
                    x:Uid="TextBlockCpuTotalUsage"
                    Grid.Row="2"
                    Grid.Column="3"
                    HorizontalAlignment="Center"
                    Style="{StaticResource SubtitleTextBlockStyle}" />
                <!--  Memory usage  -->
                <TextBlock
                    x:Uid="TextBlockMemoryUsage"
                    Grid.Row="3"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Style="{StaticResource SubtitleTextBlockStyle}" />
                <!--  Memory app usage  -->
                <controls:RadialGauge
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="5"
                    BorderThickness="2"
                    IsInteractive="False"
                    Maximum="100"
                    Minimum="0"
                    ScaleWidth="5"
                    TickSpacing="10"
                    Value="{x:Bind ViewModel.MemoryAppUsage, Mode=OneWay}" />
                <TextBlock
                    x:Uid="TextBlockMemoryAppUsage"
                    Grid.Row="5"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Style="{StaticResource SubtitleTextBlockStyle}" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="{x:Bind ViewModel.MemoryAppUsageString, Mode=OneWay}" />
                <!--  Memory total usage  -->
                <controls:RadialGauge
                    Grid.Row="4"
                    Grid.Column="3"
                    Margin="5"
                    BorderThickness="2"
                    IsInteractive="False"
                    Maximum="100"
                    Minimum="0"
                    ScaleWidth="5"
                    TickSpacing="10"
                    Value="{x:Bind ViewModel.MemoryTotalUsage, Mode=OneWay}" />
                <TextBlock
                    x:Uid="TextBlockMemoryTotalUsage"
                    Grid.Row="5"
                    Grid.Column="3"
                    HorizontalAlignment="Center"
                    Style="{StaticResource SubtitleTextBlockStyle}" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="4"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="{x:Bind ViewModel.MemoryTotalUsageString, Mode=OneWay}" />
            </Grid>
        </ContentControl>
    </Grid>
</common:TgPageBase>