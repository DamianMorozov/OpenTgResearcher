<common:TgPageBase
    x:Class="OpenTgResearcherDesktop.Views.TgLogsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:OpenTgResearcherDesktop.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OpenTgResearcherDesktop.Models"
    xmlns:styles="using:OpenTgResearcherDesktop.Styles"
    xmlns:system="using:System"
    xmlns:viewmodels="using:OpenTgResearcherDesktop.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:TgLogsViewModel}"
    mc:Ignorable="d">

    <ScrollView VerticalScrollMode="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Expander
                x:Uid="ExpanderUpdate"
                Margin="{StaticResource ExpanderMargin}"
                Padding="{StaticResource ExpanderPadding}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsExpanded="True">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!--  Log directory  -->
                    <TextBlock
                        x:Uid="SettingLogDirectory"
                        Grid.Column="0"
                        Margin="15,5,10,5"
                        TextAlignment="Left" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5"
                        Text="{x:Bind ViewModel.SensitiveData, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5"
                        HorizontalAlignment="Stretch"
                        Text="{x:Bind ViewModel.LogDirectory, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.IsDisplaySensitiveData, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <styles:TgAnimatedClipboardButton
                        Grid.Column="2"
                        Click="OnClipboardSilentWriteClick"
                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                        Tag="{x:Bind ViewModel.LogDirectory, Mode=OneWay}" />
                    <!--  View logs  -->
                    <ListView
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        ItemsSource="{x:Bind ViewModel.LogFiles, Mode=OneWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:TgLogFile">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Expander
                                        Margin="-20,0,10,0"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Stretch"
                                        Header="{x:Bind FileName, Mode=OneTime}"
                                        IsExpanded="False">
                                        <TextBlock
                                            Margin="0,-15,0,-30"
                                            Text="{x:Bind Content, Mode=OneTime}"
                                            TextWrapping="Wrap" />
                                    </Expander>
                                    <styles:TgAnimatedClipboardButton
                                        Grid.Column="1"
                                        Margin="0,5,5,5"
                                        VerticalAlignment="Top"
                                        Click="OnClipboardSilentWriteClick"
                                        Style="{StaticResource ClipboardAnimatedButtonStyle}"
                                        Tag="{x:Bind Content}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        MinWidth="60"
                                        Margin="5,15,15,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Text="{x:Bind FileSize, Mode=OneTime}" />
                                    <Button
                                        x:Uid="ActionDeleteFile"
                                        Grid.Column="3"
                                        Margin="0,7,5,5"
                                        VerticalAlignment="Top"
                                        Command="{x:Bind ViewModel.DeleteLogFileCommand}"
                                        CommandParameter="{x:Bind}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Expander>
        </Grid>
    </ScrollView>
</common:TgPageBase>
