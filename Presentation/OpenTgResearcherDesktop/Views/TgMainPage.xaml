<common:TgPageBase
    x:Class="OpenTgResearcherDesktop.Views.TgMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:OpenTgResearcherDesktop.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="using:WinUI3Localizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:OpenTgResearcherDesktop.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:TgMainViewModel}"
    mc:Ignorable="d">

    <ScrollView VerticalScrollMode="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--  About  -->
            <Expander
                Grid.Row="0"
                Margin="{StaticResource ExpanderMargin}"
                Padding="{StaticResource ExpanderPadding}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                l:Uids.Uid="ExpanderAbout"
                IsExpanded="True">
                <StackPanel Margin="15,0,0,0">
                    <TextBlock l:Uids.Uid="ProductAssignment" Style="{ThemeResource SubtitleTextBlockStyle}" />
                    <TextBlock l:Uids.Uid="ProductAssignmentDescription" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                </StackPanel>
            </Expander>
            <!--  Official site  -->
            <Expander
                Grid.Row="1"
                Margin="{StaticResource ExpanderMargin}"
                Padding="{StaticResource ExpanderPadding}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                l:Uids.Uid="ExpanderOfficialSite"
                IsExpanded="False">
                <StackPanel Margin="0,-10,0,-5">
                    <HyperlinkButton
                        Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        l:Uids.Uid="SettingsPage_OfficialSite_OpenTgResearcher"
                        Click="{x:Bind ViewModel.OpenHyperlink}" />
                </StackPanel>
            </Expander>
            <!--  Download  -->
            <Expander
                Grid.Row="3"
                Margin="{StaticResource ExpanderMargin}"
                Padding="{StaticResource ExpanderPadding}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                l:Uids.Uid="ExpanderDownload"
                IsExpanded="False">
                <StackPanel Margin="0,0,0,-5">
                    <HyperlinkButton
                        Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        l:Uids.Uid="SettingsPage_Releases_Latest"
                        Click="{x:Bind ViewModel.OpenHyperlink}" />
                    <HyperlinkButton
                        Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        l:Uids.Uid="SettingsPage_DownloadStatistics"
                        Click="{x:Bind ViewModel.OpenHyperlink}" />
                </StackPanel>
            </Expander>
            <!--  GitHub community  -->
            <Expander
                Grid.Row="4"
                Margin="{StaticResource ExpanderMargin}"
                Padding="{StaticResource ExpanderPadding}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                l:Uids.Uid="ExpanderGitHub"
                IsExpanded="False">
                <StackPanel Margin="0,0,0,-5">
                    <HyperlinkButton
                        Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        l:Uids.Uid="SettingsPage_GitHub_Link"
                        Click="{x:Bind ViewModel.OpenHyperlink}" />
                    <HyperlinkButton
                        Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        l:Uids.Uid="SettingsPage_GitHub_ReportBug"
                        Click="{x:Bind ViewModel.OpenHyperlink}" />
                    <HyperlinkButton
                        Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        l:Uids.Uid="SettingsPage_GitHub_Discussions"
                        Click="{x:Bind ViewModel.OpenHyperlink}" />
                </StackPanel>
            </Expander>
            <!--  User support  -->
            <Expander
                Grid.Row="5"
                Margin="{StaticResource ExpanderMargin}"
                Padding="{StaticResource ExpanderPadding}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                l:Uids.Uid="ExpanderUserSupport"
                IsExpanded="False">
                <StackPanel Margin="0,-10,0,-5">
                    <HyperlinkButton
                        Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        l:Uids.Uid="SettingsPage_GitHub_OpenTgResearcher"
                        Click="{x:Bind ViewModel.OpenHyperlink}" />
                </StackPanel>
            </Expander>
            <!--  Docker  -->
            <Expander
                Grid.Row="6"
                Margin="{StaticResource ExpanderMargin}"
                Padding="{StaticResource ExpanderPadding}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                l:Uids.Uid="ExpanderDocker"
                IsExpanded="False">
                <StackPanel Margin="0,-10,0,-5">
                    <HyperlinkButton
                        Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        l:Uids.Uid="SettingsPage_GitHub_DockerConsole"
                        Click="{x:Bind ViewModel.OpenHyperlink}" />
                </StackPanel>
            </Expander>
            <!--  Install Requirements  -->
            <Expander
                Grid.Row="7"
                Margin="{StaticResource ExpanderMargin}"
                Padding="{StaticResource ExpanderPadding}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                l:Uids.Uid="ExpanderInstallRequirements"
                IsExpanded="False">
                <StackPanel Margin="0,0,0,-5">
                    <HyperlinkButton
                        Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        l:Uids.Uid="SettingsPage_GitHub_InstallRequirementsRegisterTelegram"
                        Click="{x:Bind ViewModel.OpenHyperlink}" />
                    <TextBlock Margin="10,5,0,0" l:Uids.Uid="SettingsPage_GitHub_InstallRequirementsSaveValues" />
                </StackPanel>
            </Expander>
            <!--  Bug Bounty  -->
            <Expander
                Grid.Row="8"
                Margin="{StaticResource ExpanderMargin}"
                Padding="{StaticResource ExpanderPadding}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                l:Uids.Uid="ExpanderBugBounty"
                IsExpanded="False">
                <StackPanel Margin="0,-10,0,-5">
                    <HyperlinkButton
                        Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        l:Uids.Uid="SettingsPage_OfficialSite_BugBounty"
                        Click="{x:Bind ViewModel.OpenHyperlink}" />
                </StackPanel>
            </Expander>
        </Grid>
    </ScrollView>
</common:TgPageBase>
