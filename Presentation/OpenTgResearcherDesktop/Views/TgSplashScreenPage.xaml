<common:TgPageBase
    x:Class="OpenTgResearcherDesktop.Views.TgSplashScreenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:OpenTgResearcherDesktop.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:OpenTgResearcherDesktop.Helpers"
    xmlns:l="using:WinUI3Localizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:styles="using:OpenTgResearcherDesktop.Styles"
    xmlns:viewmodels="using:OpenTgResearcherDesktop.ViewModels"
    mc:Ignorable="d">

    <common:TgPageBase.Resources>
        <x:Double x:Key="ProgressBarTrackHeight">30</x:Double>
    </common:TgPageBase.Resources>

    <Grid
        x:Name="MainContent"
        Padding="10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Visibility="Collapsed">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <!--  App logo  -->
        <Image
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Width="50"
            Height="50"
            Margin="10,10,10,10"
            HorizontalAlignment="Stretch"
            Source="/Assets/StoreLogo.png"
            Stretch="Uniform" />
        <!--  App version  -->
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="0,0,0,30"
            HorizontalAlignment="Center"
            Style="{StaticResource TitleLargeTextBlockStyle}"
            Text="{x:Bind ViewModel.AppVersion}" />
        <!--  Loading  -->
        <StackPanel
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,10,0,0"
            Orientation="Vertical">
            <!--  Loading logging  -->
            <StackPanel
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <FontIcon
                    Margin="0,0,20,0"
                    Glyph="&#xE729;"
                    Visibility="{x:Bind ViewModel.IsLoadHardwareResourceMonitoring, Converter={StaticResource BoolToVisibilityConverter}}" />
                <TextBlock l:Uids.Uid="TextBlockLoadingLogging" Style="{StaticResource TitleTextBlockStyle}" />
                <FontIcon
                    Margin="20,0,0,0"
                    Glyph="&#xE73E;"
                    Visibility="{x:Bind ViewModel.IsLoadLogging, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StackPanel>
            <!--  Loading Velopack Installer  -->
            <StackPanel
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <FontIcon
                    Margin="0,0,20,0"
                    Glyph="&#xE7B8;"
                    Visibility="{x:Bind ViewModel.IsLoadHardwareResourceMonitoring, Converter={StaticResource BoolToVisibilityConverter}}" />
                <TextBlock l:Uids.Uid="TextBlockLoadingVelopack" Style="{StaticResource TitleTextBlockStyle}" />
                <FontIcon
                    Margin="20,0,0,0"
                    Glyph="&#xE73E;"
                    Visibility="{x:Bind ViewModel.IsLoadVelopack, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StackPanel>
            <!--  Loading settings  -->
            <StackPanel
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <FontIcon
                    Margin="0,0,20,0"
                    Glyph="&#xE713;"
                    Visibility="{x:Bind ViewModel.IsLoadHardwareResourceMonitoring, Converter={StaticResource BoolToVisibilityConverter}}" />
                <TextBlock l:Uids.Uid="TextBlockLoadingSettings" Style="{StaticResource TitleTextBlockStyle}" />
                <FontIcon
                    Margin="20,0,0,0"
                    Glyph="&#xE73E;"
                    Visibility="{x:Bind ViewModel.IsLoadSettings, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StackPanel>
            <!--  Loading storage  -->
            <StackPanel
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <FontIcon
                    Margin="0,0,20,0"
                    Glyph="&#xF12B;"
                    Visibility="{x:Bind ViewModel.IsLoadHardwareResourceMonitoring, Converter={StaticResource BoolToVisibilityConverter}}" />
                <TextBlock l:Uids.Uid="TextBlockLoadingStorage" Style="{StaticResource TitleTextBlockStyle}" />
                <FontIcon
                    Margin="20,0,0,0"
                    Glyph="&#xE73E;"
                    Visibility="{x:Bind ViewModel.IsLoadStorage, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StackPanel>
            <!--  Loading license  -->
            <StackPanel
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <FontIcon
                    Margin="0,0,20,0"
                    Glyph="&#xE8C7;"
                    Visibility="{x:Bind ViewModel.IsLoadHardwareResourceMonitoring, Converter={StaticResource BoolToVisibilityConverter}}" />
                <TextBlock l:Uids.Uid="TextBlockLoadingLicense" Style="{StaticResource TitleTextBlockStyle}" />
                <FontIcon
                    Margin="20,0,0,0"
                    Glyph="&#xE73E;"
                    Visibility="{x:Bind ViewModel.IsLoadLicense, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StackPanel>
            <!--  Loading notifications  -->
            <StackPanel
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <FontIcon
                    Margin="0,0,20,0"
                    Glyph="&#xEC42;"
                    Visibility="{x:Bind ViewModel.IsLoadHardwareResourceMonitoring, Converter={StaticResource BoolToVisibilityConverter}}" />
                <TextBlock l:Uids.Uid="TextBlockLoadingNotifications" Style="{StaticResource TitleTextBlockStyle}" />
                <FontIcon
                    Margin="20,0,0,0"
                    Glyph="&#xE73E;"
                    Visibility="{x:Bind ViewModel.IsLoadNotifications, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StackPanel>
            <!--  Loading hardware resource monitoring  -->
            <StackPanel
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <FontIcon
                    Margin="0,0,20,0"
                    Glyph="&#xE950;"
                    Visibility="{x:Bind ViewModel.IsLoadHardwareResourceMonitoring, Converter={StaticResource BoolToVisibilityConverter}}" />
                <TextBlock l:Uids.Uid="TextBlockLoadingHardwareResourceMonitoring" Style="{StaticResource TitleTextBlockStyle}" />
                <FontIcon
                    Margin="20,0,0,0"
                    Glyph="&#xE73E;"
                    Visibility="{x:Bind ViewModel.IsLoadHardwareResourceMonitoring, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StackPanel>
        </StackPanel>
        <!--  Progress ring  -->
        <ProgressRing
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Width="40"
            Height="40"
            Margin="50,50,50,50"
            Visibility="{x:Bind ViewModel.IsLoadComplete, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
        <!--  Continue  -->
        <Button
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Width="500"
            MinHeight="50"
            Margin="50,50,50,50"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Command="{x:Bind ViewModel.ContinueCommand}"
            FontWeight="Bold"
            Visibility="{x:Bind ViewModel.IsLoadComplete, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    l:Uids.Uid="ActionContinue"
                    HorizontalTextAlignment="Left"
                    Style="{StaticResource TitleTextBlockStyle}" />
                <FontIcon Margin="30,0,10,0" Glyph="&#xF5B0;" />
            </StackPanel>
        </Button>
    </Grid>
</common:TgPageBase>
