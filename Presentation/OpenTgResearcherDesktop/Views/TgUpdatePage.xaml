<common:TgPageBase
    x:Class="OpenTgResearcherDesktop.Views.TgUpdatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:OpenTgResearcherDesktop.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:styles="using:OpenTgResearcherDesktop.Styles"
    xmlns:viewmodels="using:OpenTgResearcherDesktop.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:TgUpdateViewModel}"
    mc:Ignorable="d">

    <ScrollView VerticalScrollMode="Auto">
        <ContentControl HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
            <Grid>
                <!--  Update  -->
                <Expander
                    x:Uid="ExpanderUpdate"
                    Margin="{StaticResource ExpanderMargin}"
                    Padding="{StaticResource ExpanderPadding}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    IsExpanded="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <!--  Update Release  -->
                        <Button
                            MinHeight="50"
                            Margin="5,10,5,10"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Command="{x:Bind Path=ViewModel.UpdateReleaseCommand}">
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                <FontIcon Margin="0,0,10,0" Glyph="&#xE72C;" />
                                <TextBlock
                                    x:Uid="ActionUpdateReleaseApp"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <!--  License button: Update Preview  -->
                        <styles:TgLicenseButton
                            Grid.Row="1"
                            MinHeight="50"
                            Margin="5,10,5,10"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="{x:Bind ViewModel.LicenseType, Mode=OneWay, Converter={StaticResource LicenseCheckBackgroundConverter}, ConverterParameter=Community}"
                            Command="{x:Bind Path=ViewModel.UpdatePreviewCommand}"
                            Foreground="{x:Bind ViewModel.LicenseType, Mode=OneWay, Converter={StaticResource LicenseCheckForegroundConverter}, ConverterParameter=Community}"
                            ShowPurchaseLicenseCommand="{x:Bind ViewModel.ShowPurchaseLicenseCommand}"
                            Style="{StaticResource LicenseButtonStyle}"
                            ToolTipService.ToolTip="{x:Bind ViewModel.LicenseType, Mode=OneWay, Converter={StaticResource LicenseCheckTooltipConverter}, ConverterParameter=Community}">
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                <FontIcon Margin="0,0,10,0" Glyph="&#xE72C;" />
                                <TextBlock
                                    x:Uid="ActionUpdatePreviewApp"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </styles:TgLicenseButton>
                        <TextBlock
                            Grid.Row="2"
                            Margin="10,5,0,-10"
                            Style="{ThemeResource BodyStrongTextBlockStyle}"
                            Text="{x:Bind ViewModel.UpdateLog, Mode=OneWay}" />
                    </Grid>
                </Expander>
            </Grid>
        </ContentControl>
    </ScrollView>
</common:TgPageBase>
