@page "/filters"
@using TgStorage.Domain.Filters
@inherits TgPageComponentEnumerable<TgEfFilterDto, TgEfFilterEntity>

<PageTitle>@TgLocale.MenuMainFilters</PageTitle>

<h1>@TgLocale.MenuMainFilters</h1>

@if (IsBlazorLoading)
{
    <p><em>Loading...</em></p>
}
else
{
	<RadzenLabel Text="@ItemsSummaryString"></RadzenLabel>
	<RadzenDataGrid Data="@Dtos" TItem="TgEfFilterDto">
		<Columns>
			<RadzenDataGridColumn TItem="TgEfFilterDto" Property="IsEnabled" Title=@TgLocale.FieldIsEnabled />
			<RadzenDataGridColumn TItem="TgEfFilterDto" Property="FilterType" Title=@TgLocale.FieldFilterType />
			<RadzenDataGridColumn TItem="TgEfFilterDto" Property="Name" Title=@TgLocale.FieldName />
			<RadzenDataGridColumn TItem="TgEfFilterDto" Property="Mask" Title=@TgLocale.FieldMask />
			<RadzenDataGridColumn TItem="TgEfFilterDto" Property="Size" Title=@TgLocale.FieldSize />
			<RadzenDataGridColumn TItem="TgEfFilterDto" Property="SizeType" Title=@TgLocale.FieldSizeType />
		</Columns>
	</RadzenDataGrid>
}