@page "/Header"
@inherits RadzenHeader

<RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center">
	<RadzenButton class="rz-border-radius-4"
	              Click=@(args => JsService.OpenLink(TgConstants.LinkTelegramApps))
	              Shade="Shade.Light" ButtonStyle="ButtonStyle.Secondary"
	              Text=@TgConstants.LinkTelegramAppsTitle />
	<RadzenButton class="rz-border-radius-4"
				  Click=@(args => JsService.OpenLink(TgConstants.LinkGitHub))
				  Shade="Shade.Light" ButtonStyle="ButtonStyle.Secondary"
				  Text=@TgConstants.LinkGitHubTitle />
	<RadzenButton class="rz-border-radius-4"
				  Click=@(args => JsService.OpenLink(TgConstants.LinkDockerHub))
	              Shade="Shade.Light" ButtonStyle="ButtonStyle.Secondary"
				  Text=@TgConstants.LinkDockerHubTitle />
	<RadzenButton class="rz-border-radius-4"
	              Click=@(args => ShowAppInfo())
	              Shade="Shade.Lighter" ButtonStyle="ButtonStyle.Secondary"
	              Text="@TgAppUtils.AppVersionShort" />
</RadzenStack>
