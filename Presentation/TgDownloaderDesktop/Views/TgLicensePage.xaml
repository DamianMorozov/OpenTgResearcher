<common:TgPageBase
	x:Class="TgDownloaderDesktop.Views.TgLicensePage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:common="using:TgDownloaderDesktop.Common"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:helpers="using:TgDownloaderDesktop.Helpers"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewmodels="using:TgDownloaderDesktop.ViewModels"
	d:DataContext="{d:DesignInstance Type=viewmodels:TgLicenseViewModel}"
	mc:Ignorable="d">

	<common:TgPageBase.Resources>
		<helpers:TgInverseBooleanConverter x:Key="InverseBooleanConverter" />
		<helpers:TgInverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
		<helpers:TgBooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
	</common:TgPageBase.Resources>

	<ScrollView VerticalScrollMode="Auto">
		<ContentControl HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<!--  License & version  -->
				<Expander
					x:Uid="ExpanderLicense"
					Grid.Row="0"
					Margin="{StaticResource ExpanderMargin}"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Stretch"
					IsExpanded="True">
					<StackPanel Margin="0,-10,0,-5">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<TextBlock
								x:Uid="TextBlockIsConfirmed"
								Grid.Row="0"
								Grid.Column="0"
								Margin="10,0,10,0"
								Style="{ThemeResource BodyTextBlockStyle}" />
							<TextBlock
								Grid.Row="0"
								Grid.Column="1"
								Margin="10,0,10,0"
								Style="{ThemeResource BodyTextBlockStyle}"
								Text="{x:Bind ViewModel.IsConfirmed, Mode=OneWay}" />
							<TextBlock
								x:Uid="TextBlockLicenseKey"
								Grid.Row="1"
								Grid.Column="0"
								Margin="10,0,10,0"
								Style="{ThemeResource BodyTextBlockStyle}" />
							<!--  SensitiveField  -->
							<TextBlock
								Grid.Row="1"
								Grid.Column="1"
								Margin="10,0,10,0"
								Style="{ThemeResource BodyTextBlockStyle}"
								Text="{x:Bind ViewModel.SensitiveField, Mode=OneWay}"
								Visibility="{x:Bind ViewModel.IsDisplaySensitiveField, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
							<!--  LicenseKey  -->
							<TextBlock
								Grid.Row="1"
								Grid.Column="1"
								Margin="10,0,10,0"
								Style="{ThemeResource BodyTextBlockStyle}"
								Text="{x:Bind ViewModel.LicenseKey, Mode=OneWay}"
								Visibility="{x:Bind ViewModel.IsDisplaySensitiveField, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
							<TextBlock
								x:Uid="TextBlockLicenseDescription"
								Grid.Row="2"
								Grid.Column="0"
								Margin="10,0,10,0"
								Style="{ThemeResource BodyTextBlockStyle}" />
							<TextBlock
								Grid.Row="2"
								Grid.Column="1"
								Margin="10,0,10,0"
								Style="{ThemeResource BodyTextBlockStyle}"
								Text="{x:Bind ViewModel.LicenseDescription, Mode=OneWay}" />
							<TextBlock
								x:Uid="TextBlockUserId"
								Grid.Row="3"
								Grid.Column="0"
								Margin="10,0,10,0"
								Style="{ThemeResource BodyTextBlockStyle}" />
							<!--  SensitiveField  -->
							<TextBlock
								Grid.Row="3"
								Grid.Column="1"
								Margin="10,0,10,0"
								Style="{ThemeResource BodyTextBlockStyle}"
								Text="{x:Bind ViewModel.SensitiveField, Mode=OneWay}"
								Visibility="{x:Bind ViewModel.IsDisplaySensitiveField, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
							<!--  UserId  -->
							<TextBlock
								Grid.Row="3"
								Grid.Column="1"
								Margin="10,0,10,0"
								Style="{ThemeResource BodyTextBlockStyle}"
								Text="{x:Bind ViewModel.UserId, Mode=OneWay}"
								Visibility="{x:Bind ViewModel.IsDisplaySensitiveField, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
							<TextBlock
								x:Uid="TextBlockExpiration"
								Grid.Row="4"
								Grid.Column="0"
								Margin="10,0,10,0"
								Style="{ThemeResource BodyTextBlockStyle}" />
							<TextBlock
								Grid.Row="4"
								Grid.Column="1"
								Margin="10,0,10,0"
								Style="{ThemeResource BodyTextBlockStyle}"
								Text="{x:Bind ViewModel.Expiration, Mode=OneWay}" />
						</Grid>
						<!--  Clear license  -->
						<Button
							Margin="0,5,5,0"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Stretch"
							Command="{x:Bind ViewModel.LicenseClearCommand, Mode=OneWay}"
							IsEnabled="{x:Bind ViewModel.IsDownloading, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}">
							<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
								<FontIcon Margin="0,0,10,0" Glyph="&#xE777;" />
								<TextBlock
									x:Uid="ActionLicenseClear"
									HorizontalAlignment="Left"
									VerticalAlignment="Center"
									HorizontalTextAlignment="Left" />
							</StackPanel>
						</Button>
						<!--  Check license  -->
						<Button
							Margin="0,5,5,0"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Stretch"
							Command="{x:Bind ViewModel.LicenseCheckCommand, Mode=OneWay}"
							IsEnabled="{x:Bind ViewModel.IsDownloading, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}">
							<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
								<FontIcon Margin="0,0,10,0" Glyph="&#xE777;" />
								<TextBlock
									x:Uid="ActionLicenseCheck"
									HorizontalAlignment="Left"
									VerticalAlignment="Center"
									HorizontalTextAlignment="Left" />
							</StackPanel>
						</Button>
						<!--  Buy license  -->
						<Button
							Margin="0,5,5,0"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Stretch"
							Command="{x:Bind ViewModel.LicenseChangeCommand, Mode=OneWay}"
							IsEnabled="{x:Bind ViewModel.IsDownloading, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}">
							<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
								<FontIcon Margin="0,0,10,0" Glyph="&#xE777;" />
								<TextBlock
									x:Uid="ActionLicenseBuy"
									HorizontalAlignment="Left"
									VerticalAlignment="Center" />
							</StackPanel>
						</Button>
						<TextBlock
							Margin="10,5,0,0"
							Style="{ThemeResource BodyStrongTextBlockStyle}"
							Text="{x:Bind ViewModel.LicenseLog, Mode=OneWay}" />
					</StackPanel>
				</Expander>
			</Grid>
		</ContentControl>
	</ScrollView>
</common:TgPageBase>
