<Page
	x:Class="TgDownloaderDesktop.Views.TgMainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:helpers="using:TgDownloaderDesktop.Helpers"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewmodels="using:TgDownloaderDesktop.ViewModels"
	d:DataContext="{d:DesignInstance Type=viewmodels:TgMainViewModel}"
	mc:Ignorable="d">

	<Page.Resources>
		<helpers:TgInverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
	</Page.Resources>

	<ScrollView VerticalScrollMode="Auto">
		<ContentControl HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<!--  About  -->
				<Expander
					x:Uid="ExpanderAbout"
					Grid.Row="0"
					Margin="{StaticResource ExpanderMargin}"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Stretch"
					IsExpanded="True">
					<StackPanel Margin="0,-15,0,-10">
						<TextBlock x:Uid="ProductAssignment" Style="{ThemeResource SubtitleTextBlockStyle}" />
						<TextBlock x:Uid="ProductAssignmentDescription" Style="{ThemeResource BodyStrongTextBlockStyle}" />
					</StackPanel>
				</Expander>
				<!--  Official website  -->
				<Expander
					x:Uid="ExpanderOfficialWebsites"
					Grid.Row="1"
					Margin="{StaticResource ExpanderMargin}"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Stretch"
					IsExpanded="False">
					<StackPanel Margin="0,-15,0,-10">
						<HyperlinkButton
							x:Uid="SettingsPage_OfficialWebsite_TgdownloaderGlobal1"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
						<HyperlinkButton
							x:Uid="SettingsPage_OfficialWebsite_TgdownloaderGlobal2"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
						<HyperlinkButton
							x:Uid="SettingsPage_OfficialWebsite_TgdownloaderRu1"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
						<HyperlinkButton
							x:Uid="SettingsPage_OfficialWebsite_TgdownloaderRu2"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
					</StackPanel>
				</Expander>
				<!--  Download  -->
				<Expander
					x:Uid="ExpanderDownload"
					Grid.Row="3"
					Margin="{StaticResource ExpanderMargin}"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Stretch"
					IsExpanded="False">
					<StackPanel Margin="0,-15,0,-10">
						<HyperlinkButton
							x:Uid="SettingsPage_Releases_Latest"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
						<HyperlinkButton
							x:Uid="SettingsPage_Release_History"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
					</StackPanel>
				</Expander>
				<!--  GitHub community  -->
				<Expander
					x:Uid="ExpanderGitHub"
					Grid.Row="4"
					Margin="{StaticResource ExpanderMargin}"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Stretch"
					IsExpanded="False">
					<StackPanel Margin="0,-15,0,-10">
						<HyperlinkButton
							x:Uid="SettingsPage_GitHub_TgDownloader"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
						<HyperlinkButton
							x:Uid="SettingsPage_GitHub_IssueTemplate"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
						<HyperlinkButton
							x:Uid="SettingsPage_GitHub_ReportBug"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
						<HyperlinkButton
							x:Uid="SettingsPage_GitHub_Discussions"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
						<HyperlinkButton
							x:Uid="SettingsPage_GitHub_Ideas"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
					</StackPanel>
				</Expander>
				<!--  User support  -->
				<Expander
					x:Uid="ExpanderUserSupport"
					Grid.Row="5"
					Margin="{StaticResource ExpanderMargin}"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Stretch"
					IsExpanded="False">
					<StackPanel Margin="0,-15,0,-10">
						<HyperlinkButton
							x:Uid="SettingsPage_GitHub_TgDownloaderNews"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
						<HyperlinkButton
							x:Uid="SettingsPage_GitHub_TgDownloaderGlobalChat"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
					</StackPanel>
				</Expander>
				<!--  Docker  -->
				<Expander
					x:Uid="ExpanderDocker"
					Grid.Row="6"
					Margin="{StaticResource ExpanderMargin}"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Stretch"
					IsExpanded="False">
					<StackPanel Margin="0,-15,0,-10">
						<HyperlinkButton
							x:Uid="SettingsPage_GitHub_DockerConsole"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
					</StackPanel>
				</Expander>
				<!--  Install Requirements  -->
				<Expander
					x:Uid="ExpanderInstallRequirements"
					Grid.Row="7"
					Margin="{StaticResource ExpanderMargin}"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Stretch"
					IsExpanded="False">
					<StackPanel Margin="0,-15,0,-10">
						<HyperlinkButton
							x:Uid="SettingsPage_GitHub_InstallRequirementsRegisterTelegram"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
						<TextBlock x:Uid="SettingsPage_GitHub_InstallRequirementsSaveValues" Margin="10,5,0,0" />
					</StackPanel>
				</Expander>
				<!--  Project support  -->
				<Expander
					x:Uid="ExpanderProjectSupport"
					Grid.Row="8"
					Margin="{StaticResource ExpanderMargin}"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Stretch"
					IsExpanded="False">
					<StackPanel Margin="0,-15,0,-10">
						<HyperlinkButton
							x:Uid="SettingsPage_GitHub_ProjectSupportGitHubStar"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
						<HyperlinkButton
							x:Uid="SettingsPage_GitHub_ProjectSupportDonateBoosty"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							Click="{x:Bind ViewModel.OpenHyperlink}" />
						<!--  USDT TRC20 Card  -->
						<Border Padding="10" CornerRadius="8">
							<StackPanel Margin="0,-5,0,-5" Orientation="Horizontal">
								<Button
									Width="60"
									Height="60"
									Click="{x:Bind ViewModel.OnClipboardWriteClick}"
									CornerRadius="10"
									Tag="{x:Bind ViewModel.DonateUsdtTrc20}">
									<SymbolIcon Symbol="Copy" />
								</Button>
								<StackPanel Margin="10,0">
									<TextBlock
										x:Uid="DonateUsdtTrc20"
										Margin="0,5,0,5"
										Style="{ThemeResource BodyTextBlockStyle}" />
									<TextBlock
										Margin="0,5,0,5"
										FontWeight="Bold"
										Style="{ThemeResource BodyTextBlockStyle}"
										Text="{x:Bind ViewModel.DonateUsdtTrc20, Mode=OneWay}" />
								</StackPanel>
							</StackPanel>
						</Border>
						<!--  USDT TON Card  -->
						<Border Padding="10" CornerRadius="8">
							<StackPanel Margin="0,-5,0,-5" Orientation="Horizontal">
								<Button
									Width="60"
									Height="60"
									Click="{x:Bind ViewModel.OnClipboardWriteClick}"
									CornerRadius="10"
									Tag="{x:Bind ViewModel.DonateUsdtTon}">
									<SymbolIcon Symbol="Copy" />
								</Button>
								<StackPanel Margin="10,0">
									<TextBlock
										x:Uid="DonateUsdtTon"
										Margin="0,5,0,5"
										Style="{ThemeResource BodyTextBlockStyle}" />
									<TextBlock
										Margin="0,5,0,5"
										FontWeight="Bold"
										Style="{ThemeResource BodyTextBlockStyle}"
										Text="{x:Bind ViewModel.DonateUsdtTon, Mode=OneWay}" />
								</StackPanel>
							</StackPanel>
						</Border>
						<!--  Toncoin  -->
						<Border Padding="10" CornerRadius="8">
							<StackPanel Margin="0,-5,0,-5" Orientation="Horizontal">
								<Button
									Width="60"
									Height="60"
									Click="{x:Bind ViewModel.OnClipboardWriteClick}"
									CornerRadius="10"
									Tag="{x:Bind ViewModel.DonateToncoin}">
									<SymbolIcon Symbol="Copy" />
								</Button>
								<StackPanel Margin="10,0">
									<TextBlock
										x:Uid="DonateToncoin"
										Margin="0,5,0,5"
										Style="{ThemeResource BodyTextBlockStyle}" />
									<TextBlock
										Margin="0,5,0,5"
										FontWeight="Bold"
										Style="{ThemeResource BodyTextBlockStyle}"
										Text="{x:Bind ViewModel.DonateToncoin, Mode=OneWay}" />
								</StackPanel>
							</StackPanel>
						</Border>
						<!--  Bitcoin  -->
						<Border Padding="10" CornerRadius="8">
							<StackPanel Margin="0,-5,0,-5" Orientation="Horizontal">
								<Button
									Width="60"
									Height="60"
									Click="{x:Bind ViewModel.OnClipboardWriteClick}"
									CornerRadius="10"
									Tag="{x:Bind ViewModel.DonateBitcoin}">
									<SymbolIcon Symbol="Copy" />
								</Button>
								<StackPanel Margin="10,0">
									<TextBlock
										x:Uid="DonateBitcoin"
										Margin="0,5,0,5"
										Style="{ThemeResource BodyTextBlockStyle}" />
									<TextBlock
										Margin="0,5,0,5"
										FontWeight="Bold"
										Style="{ThemeResource BodyTextBlockStyle}"
										Text="{x:Bind ViewModel.DonateBitcoin, Mode=OneWay}" />
								</StackPanel>
							</StackPanel>
						</Border>
						<!--  Notcoin  -->
						<Border Padding="10" CornerRadius="8">
							<StackPanel Margin="0,-5,0,-5" Orientation="Horizontal">
								<Button
									Width="60"
									Height="60"
									Click="{x:Bind ViewModel.OnClipboardWriteClick}"
									CornerRadius="10"
									Tag="{x:Bind ViewModel.DonateNotcoin}">
									<SymbolIcon Symbol="Copy" />
								</Button>
								<StackPanel Margin="10,0">
									<TextBlock
										x:Uid="DonateNotcoin"
										Margin="0,5,0,5"
										Style="{ThemeResource BodyTextBlockStyle}" />
									<TextBlock
										Margin="0,5,0,5"
										FontWeight="Bold"
										Style="{ThemeResource BodyTextBlockStyle}"
										Text="{x:Bind ViewModel.DonateNotcoin, Mode=OneWay}" />
								</StackPanel>
							</StackPanel>
						</Border>
						<!--  Dogs  -->
						<Border Padding="10" CornerRadius="8">
							<StackPanel Margin="0,-5,0,-5" Orientation="Horizontal">
								<Button
									Width="60"
									Height="60"
									Click="{x:Bind ViewModel.OnClipboardWriteClick}"
									CornerRadius="10"
									Tag="{x:Bind ViewModel.DonateDogs}">
									<SymbolIcon Symbol="Copy" />
								</Button>
								<StackPanel Margin="10,0">
									<TextBlock
										x:Uid="DonateDogs"
										Margin="0,5,0,5"
										Style="{ThemeResource BodyTextBlockStyle}" />
									<TextBlock
										Margin="0,5,0,5"
										FontWeight="Bold"
										Style="{ThemeResource BodyTextBlockStyle}"
										Text="{x:Bind ViewModel.DonateDogs, Mode=OneWay}" />
								</StackPanel>
							</StackPanel>
						</Border>
						<!--  Hamster Kombat  -->
						<Border Padding="10" CornerRadius="8">
							<StackPanel Margin="0,-5,0,-5" Orientation="Horizontal">
								<Button
									Width="60"
									Height="60"
									Click="{x:Bind ViewModel.OnClipboardWriteClick}"
									CornerRadius="10"
									Tag="{x:Bind ViewModel.DonateHmstr}">
									<SymbolIcon Symbol="Copy" />
								</Button>
								<StackPanel Margin="10,0">
									<TextBlock
										x:Uid="DonateHmstr"
										Margin="0,5,0,5"
										Style="{ThemeResource BodyTextBlockStyle}" />
									<TextBlock
										Margin="0,5,0,5"
										FontWeight="Bold"
										Style="{ThemeResource BodyTextBlockStyle}"
										Text="{x:Bind ViewModel.DonateHmstr, Mode=OneWay}" />
								</StackPanel>
							</StackPanel>
						</Border>
						<!--  X Empire  -->
						<Border Padding="10" CornerRadius="8">
							<StackPanel Margin="0,-5,0,-5" Orientation="Horizontal">
								<Button
									Width="60"
									Height="60"
									Click="{x:Bind ViewModel.OnClipboardWriteClick}"
									CornerRadius="10"
									Tag="{x:Bind ViewModel.DonateX}">
									<SymbolIcon Symbol="Copy" />
								</Button>
								<StackPanel Margin="10,0">
									<TextBlock
										x:Uid="DonateX"
										Margin="0,5,0,5"
										Style="{ThemeResource BodyTextBlockStyle}" />
									<TextBlock
										Margin="0,5,0,5"
										FontWeight="Bold"
										Style="{ThemeResource BodyTextBlockStyle}"
										Text="{x:Bind ViewModel.DonateX, Mode=OneWay}" />
								</StackPanel>
							</StackPanel>
						</Border>
						<!--  Catizen  -->
						<Border Padding="10" CornerRadius="8">
							<StackPanel Margin="0,-5,0,-5" Orientation="Horizontal">
								<Button
									Width="60"
									Height="60"
									Click="{x:Bind ViewModel.OnClipboardWriteClick}"
									CornerRadius="10"
									Tag="{x:Bind ViewModel.DonateCatizen}">
									<SymbolIcon Symbol="Copy" />
								</Button>
								<StackPanel Margin="10,0">
									<TextBlock
										x:Uid="DonateCatizen"
										Margin="0,5,0,5"
										Style="{ThemeResource BodyTextBlockStyle}" />
									<TextBlock
										Margin="0,5,0,5"
										FontWeight="Bold"
										Style="{ThemeResource BodyTextBlockStyle}"
										Text="{x:Bind ViewModel.DonateCatizen, Mode=OneWay}" />
								</StackPanel>
							</StackPanel>
						</Border>
						<!--  Major  -->
						<Border Padding="10" CornerRadius="8">
							<StackPanel Margin="0,-5,0,-5" Orientation="Horizontal">
								<Button
									Width="60"
									Height="60"
									Click="{x:Bind ViewModel.OnClipboardWriteClick}"
									CornerRadius="10"
									Tag="{x:Bind ViewModel.DonateMajor}">
									<SymbolIcon Symbol="Copy" />
								</Button>
								<StackPanel Margin="10,0">
									<TextBlock
										x:Uid="DonateMajor"
										Margin="0,5,0,5"
										Style="{ThemeResource BodyTextBlockStyle}" />
									<TextBlock
										Margin="0,5,0,5"
										FontWeight="Bold"
										Style="{ThemeResource BodyTextBlockStyle}"
										Text="{x:Bind ViewModel.DonateMajor, Mode=OneWay}" />
								</StackPanel>
							</StackPanel>
						</Border>
					</StackPanel>
				</Expander>
				<!--  License & version  -->
				<Expander
					x:Uid="ExpanderLicense"
					Grid.Row="9"
					Margin="{StaticResource ExpanderMargin}"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Stretch"
					IsExpanded="True">
					<StackPanel Margin="0,-15,0,-10">
						<TextBlock
							Margin="10,5,0,0"
							Style="{ThemeResource SubtitleTextBlockStyle}"
							Text="{x:Bind ViewModel.AppVersionFull, Mode=OneWay}" />
						<TextBlock
							Margin="10,0,0,0"
							Style="{ThemeResource SubtitleTextBlockStyle}"
							Text="{x:Bind ViewModel.LicenseDescription, Mode=OneWay}" />
						<!--<HyperlinkButton
							x:Uid="SettingsPage_GitHub_InstallRequirementsNet9"
							Margin="{StaticResource SettingsPageHyperlinkButtonMargin}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Left"
							Click="{x:Bind ViewModel.OpenHyperlink}" />-->
					</StackPanel>
				</Expander>
			</Grid>
		</ContentControl>
	</ScrollView>
</Page>
